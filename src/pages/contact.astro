---
import PublicLayout from '@layouts/PublicLayout.astro';
import Button from '@components/ui/Button.astro';
---

<PublicLayout title="Contact Us">
  <section class="container-custom py-12 md:py-20">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-urban font-bold mb-6">Contact Us</h1>
      <p class="text-xl text-gray-600 mb-12">
        Have questions? We're here to help. Reach out to us for any inquiries about your order or our products.
      </p>
      
      <div class="bg-gray-50 p-8 rounded-lg border border-gray-100 mb-12">
         <h2 class="text-2xl font-bold mb-4">Customer Support</h2>
         <p class="mb-2">Email: support@croma.fashion</p>
         <p>Hours: Mon-Fri, 9am - 6pm EST</p>
      </div>

      <Button href="/" variant="primary">Return Home</Button>
    </div>
  </section>
</PublicLayout>
