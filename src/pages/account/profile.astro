---
import PublicLayout from '@layouts/PublicLayout.astro';
import { supabase } from '@lib/supabase';

const user = Astro.locals.user;
const profile = Astro.locals.profile;

if (!user) {
  return Astro.redirect('/auth/login?redirect=/account/profile');
}

// Handle form submission
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const fullName = formData.get('full_name')?.toString() || '';
  const phone = formData.get('phone')?.toString() || '';

  // IMPORTANT: Use a stateless request with the access token
  // This prevents consuming the Refresh Token on the server, which causes
  // the client's session to be invalidated (Reuse Detection).
  const accessToken = Astro.cookies.get('sb-access-token')?.value;

  if (!accessToken) {
    return Astro.redirect('/auth/login?redirect=/account/profile');
  }

  // Create a temporary stateless client for this request
  const { createClient } = await import('@supabase/supabase-js');
  const tempClient = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.PUBLIC_SUPABASE_ANON_KEY,
    {
      global: {
        headers: {
          Authorization: `Bearer ${accessToken}`
        }
      },
      auth: {
        persistSession: false,
        autoRefreshToken: false,
        detectSessionInUrl: false
      }
    }
  );

  const { error } = await tempClient.rpc('update_own_profile', {
    p_full_name: fullName,
    p_phone: phone
  });

  if (error) {
    console.error('Profile update error:', error);
    return Astro.redirect(`/account/profile?error=${encodeURIComponent(error.message)}`);
  }

  return Astro.redirect('/account/profile?success=true');
}

const errorMsg = Astro.url.searchParams.get('error');

const success = Astro.url.searchParams.get('success');
---

<PublicLayout title="Mi Perfil">
  <section class="container-custom py-12">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-8">Mi Perfil</h1>

      {success && (
        <div class="mb-6 p-4 bg-green-50 border-l-4 border-green-500 rounded">
          <p class="text-sm text-green-700">Perfil actualizado exitosamente</p>
        </div>
      )}

      {errorMsg && (
        <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded">
          <p class="text-sm text-red-700">Error al guardar: {errorMsg}</p>
        </div>
      )}

      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
        <form method="POST" class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              value={user.email}
              disabled
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg bg-gray-50 text-gray-500"
            />
            <p class="text-xs text-gray-500 mt-1">El email no se puede cambiar</p>
          </div>

          <div>
            <label for="full_name" class="block text-sm font-semibold text-gray-700 mb-2">
              Nombre Completo
            </label>
            <input
              type="text"
              id="full_name"
              name="full_name"
              value={profile?.full_name || ''}
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
              placeholder="Tu nombre completo"
            />
          </div>

          <div>
            <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
              Teléfono
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              value={profile?.phone || ''}
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
              placeholder="+34 600 000 000"
            />
          </div>

          {profile?.role === 'admin' && (
            <div class="p-4 bg-black text-white rounded-lg">
              <p class="text-sm font-medium">Rol: Administrador</p>
              <p class="text-xs mt-1 text-gray-300">Tienes acceso al panel de administración</p>
            </div>
          )}

          <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <a
              href="/category/all"
              class="px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-lg hover:border-gray-400 transition-colors font-medium"
            >
              Cancelar
            </a>
            <button
              type="submit"
              class="px-6 py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-medium"
            >
              Guardar Cambios
            </button>
          </div>
        </form>

        <div class="mt-8 pt-8 border-t border-gray-200">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Acciones de Cuenta</h3>
          <a
            href="/auth/logout"
            class="inline-block px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-medium"
          >
            Cerrar Sesión
          </a>
        </div>
      </div>
    </div>
  </section>
</PublicLayout>
