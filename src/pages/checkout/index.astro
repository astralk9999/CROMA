---
import PublicLayout from '@layouts/PublicLayout.astro';
import { supabase } from '@lib/supabase';
import { formatPrice } from '@lib/utils';
import CartSummary from '@components/checkout/CartSummary';

const user = Astro.locals.user;
const profile = Astro.locals.profile;

// Auth check removed to allow Guest Checkout
// const user = Astro.locals.user; // Already declared above
// const profile = Astro.locals.profile; // Already declared above

---

<PublicLayout title="Checkout">
  <section class="container-custom py-12">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-8">Finalizar Compra</h1>

      {!user && (
        <div class="mb-8 p-4 bg-blue-50 border-l-4 border-blue-500 rounded flex justify-between items-center">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-blue-700 text-sm">¿Ya tienes cuenta? <a href="/auth/login?redirect=/checkout" class="font-bold underline">Inicia sesión</a> para guardar tu pedido en tu historial.</p>
          </div>
        </div>
      )}

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Checkout Form -->
        <div class="lg:col-span-2">
          <form id="checkout-form" class="space-y-6">
            <!-- Shipping Address -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                Dirección de Envío
              </h2>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="md:col-span-2">
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nombre Completo *</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    value={profile?.full_name || ''}
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="Tu nombre completo"
                  />
                </div>

                <div class="md:col-span-2">
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    value={user?.email || ''}
                    class={`w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black ${user ? 'bg-gray-50' : ''}`}
                    readonly={!!user}
                    placeholder="tu@email.com"
                  />
                </div>

                <div class="md:col-span-2">
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Teléfono *</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    required
                    value={profile?.phone || ''}
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="Tu teléfono"
                  />
                </div>

                <div class="md:col-span-2">
                  <label for="address" class="block text-sm font-medium text-gray-700 mb-1">Dirección *</label>
                  <input 
                    type="text" 
                    id="address" 
                    name="address" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="Calle, número, piso..."
                  />
                </div>

                <div>
                  <label for="city" class="block text-sm font-medium text-gray-700 mb-1">Ciudad *</label>
                  <input 
                    type="text" 
                    id="city" 
                    name="city" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="Tu ciudad"
                  />
                </div>

                <div>
                  <label for="postal_code" class="block text-sm font-medium text-gray-700 mb-1">Código Postal *</label>
                  <input 
                    type="text" 
                    id="postal_code" 
                    name="postal_code" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="12345"
                  />
                </div>

                <div class="md:col-span-2">
                  <label for="country" class="block text-sm font-medium text-gray-700 mb-1">País *</label>
                  <select 
                    id="country" 
                    name="country" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                  >
                    <option value="ES" selected>España</option>
                    <option value="PT">Portugal</option>
                    <option value="FR">Francia</option>
                    <option value="IT">Italia</option>
                    <option value="DE">Alemania</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- Payment Info -->
            <div class="bg-gray-100 rounded-xl p-6 border border-gray-200">
              <div class="flex items-center gap-3">
                <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <div>
                  <p class="font-bold text-gray-900">Pago seguro con Stripe</p>
                  <p class="text-sm text-gray-600">Serás redirigido a Stripe para completar el pago de forma segura.</p>
                </div>
              </div>
            </div>

            <!-- Submit Button -->
            <button 
              type="submit" 
              id="submit-btn"
              class="w-full py-4 bg-black text-white font-bold rounded-lg hover:bg-gray-800 transition-colors text-lg"
            >
              Proceder al Pago
            </button>
          </form>
        </div>

        <!-- Order Summary -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-4">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Resumen del Pedido</h2>
            
            <CartSummary client:only="react" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    import { cartItems } from '@stores/cart';
    
    const form = document.getElementById('checkout-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement | null;
    
    // Enable button initially (validation will happen on submit)
    if (submitBtn) submitBtn.disabled = false;

    // Handle form submission
    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.textContent = 'Procesando...';
            }

            const formData = new FormData(form);
            const shippingAddress = {
                name: formData.get('name'),
                email: formData.get('email'),
                phone: formData.get('phone'),
                address: formData.get('address'),
                city: formData.get('city'),
                postal_code: formData.get('postal_code'),
                country: formData.get('country'),
            };

            const currentItems = Object.values(cartItems.get());

            if (currentItems.length === 0) {
                 alert('Tu carrito está vacío');
                 if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Proceder al Pago';
                 }
                 return;
            }

            try {
                const response = await fetch('/api/checkout', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    items: currentItems,
                    shippingAddress,
                    origin: window.location.origin,
                    guestEmail: formData.get('email'),
                }),
                });

                const data = await response.json();
                
                if (data.url) {
                    window.location.href = data.url;
                } else {
                    alert('Error: ' + (data.error || 'Error desconocido'));
                    if (submitBtn) {
                        submitBtn.disabled = false;
                        submitBtn.textContent = 'Proceder al Pago';
                    }
                }
            } catch (error) {
                console.error('Checkout error:', error);
                alert('Error de conexión');
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Proceder al Pago';
                }
            }
        });
    }
  </script>
</PublicLayout>
