---
import PublicLayout from '@layouts/PublicLayout.astro';

const error = Astro.url.searchParams.get('error');
const message = Astro.url.searchParams.get('message');
---

<PublicLayout title="Restablecer Contraseña - CROMA">
  <section class="min-h-screen bg-gray-50 py-12">
    <div class="container-custom">
      <div class="max-w-md mx-auto">
        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-4xl font-bold text-gray-900 mb-2">¿Olvidaste tu contraseña?</h1>
          <p class="text-gray-600">No te preocupes, te enviaremos instrucciones para restablecerla.</p>
        </div>

        <!-- Main Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
          {error && (
            <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm text-red-700">{error}</p>
              </div>
            </div>
          )}

          {message && (
            <div class="mb-6 p-4 bg-green-50 border-l-4 border-green-500 rounded">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm text-green-700">{message}</p>
              </div>
            </div>
          )}

          <!-- Client-side Message Container -->
          <div id="status-message" class="hidden mb-6 p-4 rounded border-l-4">
            <div class="flex items-center">
              <div id="status-icon" class="mr-2"></div>
              <p id="status-text" class="text-sm font-medium"></p>
            </div>
          </div>

          <!-- Reset Form -->
          <form id="reset-form" class="space-y-5">
            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black transition-all"
                placeholder="tu@email.com"
              />
            </div>

            <button
              type="submit"
              id="submit-btn"
              class="w-full bg-black text-white py-3.5 rounded-lg hover:bg-gray-800 transition-all font-semibold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
            >
              Enviar Instrucciones
            </button>
          </form>

          <div class="mt-6 text-center">
            <a href="/auth/login" class="text-sm text-gray-600 hover:text-black font-medium">
              Volver al inicio de sesión
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    import { supabase } from '@lib/supabase';

    const form = document.getElementById('reset-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const statusContainer = document.getElementById('status-message') as HTMLDivElement;
    const statusIcon = document.getElementById('status-icon') as HTMLDivElement;
    const statusText = document.getElementById('status-text') as HTMLParagraphElement;

    function showStatus(msg: string, isError: boolean) {
      statusContainer.classList.remove('hidden', 'bg-red-50', 'border-red-500', 'text-red-700', 'bg-green-50', 'border-green-500', 'text-green-700');
      
      if (isError) {
        statusContainer.classList.add('bg-red-50', 'border-red-500', 'text-red-700');
        statusIcon.innerHTML = `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/></svg>`;
      } else {
        statusContainer.classList.add('bg-green-50', 'border-green-500', 'text-green-700');
        statusIcon.innerHTML = `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>`;
      }
      
      statusText.textContent = msg;
      statusContainer.classList.remove('hidden');
      statusContainer.scrollIntoView({ behavior: 'smooth', block: 'end' });
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const email = formData.get('email') as string;

      submitBtn.disabled = true;
      submitBtn.textContent = 'Enviando...';
      statusContainer.classList.add('hidden');

      try {
        // Guardamos el destino en una cookie para que el callback lo sepa después
        document.cookie = "sb-redirect-next=/auth/update-password; path=/; max-age=3600";

        const { error } = await supabase.auth.resetPasswordForEmail(email, {
          redirectTo: `${window.location.origin}/auth/callback`,
        });

        if (error) throw error;

        showStatus('Instrucciones enviadas. Revisa tu correo electrónico.', false);
        setTimeout(() => {
          window.location.href = '/auth/login?message=Revisa tu email para restablecer tu contraseña';
        }, 2000);
        
      } catch (error: any) {
        console.error('Reset error:', error);
        showStatus(error.message || 'Error al enviar el correo de recuperación', true);
        submitBtn.disabled = false;
        submitBtn.textContent = 'Enviar Instrucciones';
      }
    });
  </script>
</PublicLayout>
