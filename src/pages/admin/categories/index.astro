---
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '../../../lib/supabase';

// Fetch categories
const { data: categories, error } = await supabase
  .from('categories')
  .select('*')
  .order('name');
---

<AdminLayout title="Gestión de Categorías" activeSection="categories">
  <!-- Actions Bar -->
  <div class="mb-6 flex flex-col sm:flex-row gap-4 items-start sm:items-center justify-between">
    <!-- Search -->
    <div class="relative flex-1 max-w-md">
      <input
        type="text"
        id="search-input"
        placeholder="Buscar categorías..."
        class="w-full px-4 py-2 pl-10 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
      />
      <svg class="absolute left-3 top-3 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
    </div>
    
    <a 
      href="/admin/categories/new" 
      class="px-6 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-medium whitespace-nowrap"
    >
      + Nueva Categoría
    </a>
  </div>

  <!-- Info Bar -->
  <div class="mb-4">
    <p class="text-sm text-gray-600" id="count-info">{categories?.length || 0} categorías</p>
  </div>

  <!-- Categories List -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <table class="w-full" id="categories-table">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Nombre</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Slug</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Descripción</th>
          <th class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase">Acciones</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200" id="categories-body">
        {categories?.map((cat) => (
          <tr class="hover:bg-gray-50 category-row" data-name={cat.name.toLowerCase()} data-slug={cat.slug.toLowerCase()}>
            <td class="px-6 py-4 font-medium text-gray-900">{cat.name}</td>
            <td class="px-6 py-4 text-gray-500 font-mono text-sm">{cat.slug}</td>
            <td class="px-6 py-4 text-gray-500 truncate max-w-xs">{cat.description || '-'}</td>
            <td class="px-6 py-4 text-right">
              <a href={`/admin/categories/${cat.id}/edit`} class="text-blue-600 hover:underline mr-4">Editar</a>
              <button 
                data-id={cat.id} 
                data-name={cat.name}
                class="delete-btn text-red-600 hover:underline"
              >
                Eliminar
              </button>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>

  <script>
    import { supabase } from '../../../lib/supabase';

    // Real-time search filter
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const rows = document.querySelectorAll('.category-row');
    const countInfo = document.getElementById('count-info');
    const totalCount = rows.length;

    searchInput?.addEventListener('input', () => {
      const query = searchInput.value.toLowerCase().trim();
      let visibleCount = 0;

      rows.forEach(row => {
        const name = row.getAttribute('data-name') || '';
        const slug = row.getAttribute('data-slug') || '';
        const matches = name.includes(query) || slug.includes(query);
        
        (row as HTMLElement).style.display = matches ? '' : 'none';
        if (matches) visibleCount++;
      });

      if (countInfo) {
        countInfo.textContent = query 
          ? `${visibleCount} de ${totalCount} categorías` 
          : `${totalCount} categorías`;
      }
    });

    // Delete functionality
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const id = btn.getAttribute('data-id');
        const name = btn.getAttribute('data-name');

        if (confirm(`¿Eliminar categoría "${name}"? Esto podría afectar a productos existentes.`)) {
          const { error } = await supabase.rpc('admin_delete_category', { p_id: id });
          
          if (error) {
            alert('Error: ' + error.message);
          } else {
            window.location.reload();
          }
        }
      });
    });
  </script>
</AdminLayout>
