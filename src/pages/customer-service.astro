---
import PublicLayout from '@layouts/PublicLayout.astro';
---

<PublicLayout title="Customer Service & Contact">
  <div class="container-custom py-24 min-h-[60vh]">
    <div class="max-w-4xl mx-auto">
        <header class="mb-16 text-center">
            <h1 class="text-5xl md:text-7xl font-urban font-black uppercase text-black mb-6 tracking-tighter">
                Customer<br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-zinc-500 to-zinc-800">Service</span>
            </h1>
            <p class="text-zinc-500 text-lg font-mono uppercase tracking-widest">We are here to help</p>
        </header>

        <div class="grid md:grid-cols-2 gap-8">
            {/* Contact Card */}
            <div class="group relative overflow-hidden bg-white border border-zinc-200 rounded-[2rem] p-10 transition-all duration-500 hover:shadow-2xl hover:border-black/10">
                <div class="absolute top-0 right-0 w-32 h-32 bg-zinc-50 rounded-bl-[10rem] -mr-8 -mt-8 transition-transform group-hover:scale-150 duration-700"></div>
                
                <h2 class="relative z-10 text-2xl font-black uppercase mb-8 flex items-center gap-3">
                    <span class="w-3 h-3 bg-black rounded-full"></span>
                    Contact
                </h2>

                <div class="relative z-10 space-y-6">
                    <div>
                        <p class="text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-1">Email Support</p>
                        <a href="mailto:support@croma.com" class="text-xl font-bold hover:text-brand-red transition-colors">support@croma.com</a>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-1">Phone Line</p>
                        <p class="text-xl font-bold">+1 (555) 123-4567</p>
                    </div>
                </div>
            </div>

            {/* Hours Card */}
            <div class="group relative overflow-hidden bg-black text-white rounded-[2rem] p-10">
                <div class="absolute inset-0 bg-[#202020]"></div>
                
                <h2 class="relative z-10 text-2xl font-black uppercase mb-8 flex items-center gap-3">
                    <span class="w-3 h-3 bg-white rounded-full"></span>
                    Hours
                </h2>

                <div class="relative z-10 space-y-6">
                    <div class="flex justify-between items-end border-b border-white/10 pb-4">
                        <span class="font-bold uppercase tracking-wide text-zinc-400">Monday - Friday</span>
                        <span class="text-xl font-bold">9am - 6pm EST</span>
                    </div>
                    <div class="flex justify-between items-end border-b border-white/10 pb-4">
                        <span class="font-bold uppercase tracking-wide text-zinc-400">Saturday</span>
                        <span class="text-xl font-bold">10am - 4pm EST</span>
                    </div>
                    <div class="flex justify-between items-end border-b border-white/10 pb-4">
                        <span class="font-bold uppercase tracking-wide text-zinc-400">Sunday</span>
                        <span class="text-xl font-bold text-brand-red">Closed</span>
                    </div>
                </div>
            </div>
        </div>

        {/* FAQ Teaser */}
        <div class="mt-12 text-center">
            <p class="text-zinc-500 mb-4">Have a quick question?</p>
            <a href="/faq" class="inline-flex items-center gap-2 text-black font-black uppercase tracking-widest border-b-2 border-black pb-1 hover:text-zinc-600 hover:border-zinc-600 transition-colors">
                Visit our FAQ
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
        </div>
    </div>
  </div>
</PublicLayout>
