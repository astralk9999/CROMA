---
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabaseAdmin } from '@lib/supabase-admin';

const { id } = Astro.params;

// Fetch User Profile
const { data: user, error: userError } = await supabaseAdmin
  .from('profiles')
  .select('*')
  .eq('id', id)
  .single();

if (userError || !user) {
  console.error('[Admin Activity] User Fetch Error:', userError);
  return Astro.redirect('/admin/users');
}

// Global Check (Diagnostic)
const { count: globalFavCount } = await supabaseAdmin.from('favorites').select('*', { count: 'exact', head: true });
const { data: sampleFavs } = await supabaseAdmin.from('favorites').select('user_id').limit(5);

// Fetch Orders with Items
const { data: orders, error: ordersError } = await supabaseAdmin
  .from('orders')
  .select('*, items:order_items(*)')
  .eq('user_id', id)
  .order('created_at', { ascending: false });

if (ordersError) {
    console.error('[Admin Activity] Orders Fetch Error:', ordersError);
}

// Fetch Favorites
const { data: favorites, error: favoritesError } = await supabaseAdmin
  .from('favorites')
  .select(`
    *,
    product:products!product_id(*)
  `)
  .eq('user_id', id)
  .order('created_at', { ascending: false });

if (favoritesError) {
    console.error('[Admin Activity] Favorites Fetch Error:', favoritesError);
}

// Debug logs to terminal (Astro server)
console.log(`[Admin Activity] Analysis for ${user.email} (${id}):`, {
    foundUser: !!user,
    orderCount: orders?.length || 0,
    favCount: favorites?.length || 0,
    globalFavCountInDB: globalFavCount,
    sampleUserIdsInFavs: sampleFavs?.map(f => f.user_id)
});

const totalSpent = orders?.reduce((sum, order) => sum + (order.status !== 'cancelled' ? Number(order.total_amount) : 0), 0) || 0;
const totalOrders = orders?.length || 0;
const totalFavorites = favorites?.length || 0;

const getStatusColor = (status: string) => {
  switch (status) {
    case 'delivered': return 'bg-green-50 text-green-700 border-green-100';
    case 'shipped': return 'bg-blue-50 text-blue-700 border-blue-100';
    case 'processing': return 'bg-amber-50 text-amber-700 border-amber-100';
    case 'cancelled': return 'bg-red-50 text-red-700 border-red-100';
    default: return 'bg-zinc-50 text-zinc-700 border-zinc-100';
  }
};
---

<AdminLayout title={`Actividad: ${user.full_name}`} activeSection="users">
  <div class="px-8 pt-12 pb-24 max-w-7xl mx-auto">
    <!-- Header Protocol -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-8 mb-16 animate-fade-in">
        <div>
            <div class="flex items-center gap-3 mb-4">
                <a href="/admin/users" class="w-10 h-10 bg-white border border-black/5 rounded-xl flex items-center justify-center text-zinc-400 hover:text-black hover:border-black transition-all">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7"/></svg>
                </a>
                <div class="h-6 w-px bg-black/5"></div>
                <div class="flex items-center gap-2 px-3 py-1 bg-zinc-900 rounded-full">
                    <div class="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse"></div>
                    <span class="text-[8px] font-black text-white uppercase tracking-[0.2em]">Expediente Activo</span>
                </div>
            </div>
            <h1 class="text-4xl font-black text-zinc-900 tracking-tighter uppercase leading-none">
                {user.full_name}
            </h1>
            <p class="text-[10px] font-bold text-zinc-400 uppercase tracking-[0.4em] mt-4 flex items-center gap-3">
                ID_SUJETO: <span class="text-zinc-600 font-black">{id?.slice(0, 8)}...</span>
                <span class="w-1 h-1 bg-zinc-300 rounded-full"></span>
                EMAIL: <span class="text-zinc-600 font-black">{user.email}</span>
            </p>
        </div>

        <div class="flex items-center gap-4">
            <a href={`/admin/users/${id}/edit`} class="px-8 py-4 bg-white border-2 border-zinc-100 text-[10px] font-black uppercase tracking-widest text-zinc-900 rounded-2xl hover:border-zinc-900 transition-all">
                Configurar Perfil
            </a>
        </div>
    </div>

    <!-- Quick Insights -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        <div class="bg-white p-8 rounded-[2.5rem] border border-black/5 shadow-sm relative overflow-hidden group">
            <div class="absolute top-0 right-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
                <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/></svg>
            </div>
            <p class="text-[9px] font-black text-zinc-400 uppercase tracking-[0.3em] mb-3">Gasto Total Acumulado</p>
            <p class="text-4xl font-black text-black tracking-tight">{totalSpent.toLocaleString()}€</p>
            <p class="text-[9px] font-bold text-zinc-300 uppercase tracking-widest mt-2">Excluyendo cancelados</p>
        </div>
        <div class="bg-white p-8 rounded-[2.5rem] border border-black/5 shadow-sm relative overflow-hidden group">
             <div class="absolute top-0 right-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
                <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/></svg>
            </div>
            <p class="text-[9px] font-black text-zinc-400 uppercase tracking-[0.3em] mb-3">Historial de Pedidos</p>
            <p class="text-4xl font-black text-black tracking-tight">{totalOrders}</p>
            <p class="text-[9px] font-bold text-zinc-300 uppercase tracking-widest mt-2">{orders?.filter(o => o.status === 'delivered').length} entregados</p>
        </div>
        <div class="bg-white p-8 rounded-[2.5rem] border border-black/5 shadow-sm relative overflow-hidden group">
             <div class="absolute top-0 right-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
                <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
            </div>
            <p class="text-[9px] font-black text-zinc-400 uppercase tracking-[0.3em] mb-3">Productos Favoritos</p>
            <p class="text-4xl font-black text-black tracking-tight">{totalFavorites}</p>
            <p class="text-[9px] font-bold text-zinc-300 uppercase tracking-widest mt-2">Lista de Deseos Activa</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Orders Protocol -->
        <section>
            <div class="flex items-center gap-4 mb-8">
                <h2 class="text-xl font-black text-zinc-900 uppercase tracking-tighter">Historial de Transacciones</h2>
                <div class="flex-1 h-px bg-zinc-100"></div>
            </div>

            <div class="space-y-4">
                {orders && orders.length > 0 ? (
                    orders.map(order => (
                        <div class="bg-white border border-zinc-100 rounded-3xl p-6 hover:shadow-xl transition-all group">
                            <div class="flex items-center gap-4 mb-6">
                                {order.items?.[0]?.product_image && (
                                    <div class="w-16 h-16 rounded-xl overflow-hidden bg-zinc-50 border border-black/5 flex-shrink-0">
                                        <img src={order.items[0].product_image} alt="Producto" class="w-full h-full object-cover" />
                                    </div>
                                )}
                                <div class="flex-1">
                                    <div class="flex items-center justify-between mb-1">
                                        <p class="text-[10px] font-black text-zinc-400 uppercase tracking-widest">ID: {order.id.slice(0, 8)}</p>
                                        <div class={`px-3 py-1 rounded-full border text-[8px] font-black uppercase tracking-widest ${getStatusColor(order.status)}`}>
                                            {order.status}
                                        </div>
                                    </div>
                                    <p class="text-[9px] font-bold text-zinc-300 uppercase">
                                        {new Date(order.created_at).toLocaleDateString('es-ES', { day: '2-digit', month: 'long', year: 'numeric' })}
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-end justify-between">
                                <div class="space-y-1">
                                    <p class="text-xl font-black text-zinc-900">{Number(order.total_amount).toLocaleString()}€</p>
                                    {order.items && order.items.length > 1 && (
                                        <p class="text-[9px] font-black text-zinc-400 uppercase tracking-widest">+ {order.items.length - 1} artículos adicionales</p>
                                    )}
                                </div>
                                <a href={`/admin/orders/${order.id}`} class="text-[9px] font-black text-zinc-400 uppercase tracking-widest hover:text-black transition-colors flex items-center gap-2">
                                    Ver Detalle
                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
                                </a>
                            </div>
                        </div>
                    ))
                ) : (
                    <div class="bg-zinc-50 rounded-[2rem] p-12 text-center border-2 border-dashed border-zinc-200">
                        <p class="text-[10px] font-black text-zinc-400 uppercase tracking-widest">Sin transacciones registradas</p>
                    </div>
                )}
            </div>
        </section>

        <!-- Favorites Protocol -->
        <section>
            <div class="flex items-center gap-4 mb-8">
                <h2 class="text-xl font-black text-zinc-900 uppercase tracking-tighter">Interés del Sujeto (Favoritos)</h2>
                <div class="flex-1 h-px bg-zinc-100"></div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                {favorites && favorites.length > 0 ? (
                    favorites.map(fav => (
                        <div class="bg-white border border-zinc-100 rounded-[2rem] overflow-hidden group hover:shadow-2xl transition-all">
                            <div class="aspect-square bg-zinc-100 overflow-hidden relative">
                                { (fav.product?.images?.[0] || fav.product?.image_url) ? (
                                    <img 
                                        src={fav.product.images?.[0] || fav.product.image_url} 
                                        alt={fav.product.name} 
                                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" 
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center bg-zinc-200">
                                        <svg class="w-12 h-12 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                                    </div>
                                )}
                                <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                                <div class="absolute bottom-4 left-4 right-4 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all">
                                    <a href={`/admin/products/${fav.product?.id}/edit`} class="w-full py-3 bg-white text-black text-[8px] font-black uppercase tracking-widest text-center rounded-xl block">
                                        Ver Producto
                                    </a>
                                </div>
                            </div>
                            <div class="p-5">
                                <p class="text-[10px] font-black text-zinc-900 uppercase truncate">{fav.product?.name || 'Producto No Encontrado'}</p>
                                <p class="text-[9px] font-bold text-zinc-400 uppercase tracking-widest mt-1">{fav.product?.brand || 'Sin Marca'}</p>
                                <div class="flex items-center justify-between mt-4">
                                    <p class="text-sm font-black text-zinc-900">{Number(fav.product?.price || 0).toLocaleString()}€</p>
                                    <p class="text-[8px] font-bold text-zinc-300 uppercase tracking-tighter">Añadido: {new Date(fav.created_at).toLocaleDateString()}</p>
                                </div>
                            </div>
                        </div>
                    ))
                ) : (
                    <div class="col-span-full bg-zinc-50 rounded-[2rem] p-12 text-center border-2 border-dashed border-zinc-200">
                        <p class="text-[10px] font-black text-zinc-400 uppercase tracking-widest">Sin productos en favoritos</p>
                    </div>
                )}
            </div>
        </section>
    </div>
  </div>

  <style>
    .animate-fade-in {
        animation: fadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
  </style>
</AdminLayout>
