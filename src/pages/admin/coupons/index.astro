---
import AdminLayout from '@layouts/AdminLayout.astro';
import ConfirmationModal from '@components/islands/ConfirmationModal';
import { supabaseAdmin } from '../../../lib/supabase-admin';

// Fetch coupons
const { data: coupons } = await supabaseAdmin
  .from('coupons')
  .select('*')
  .order('created_at', { ascending: false });

const safeCoupons = coupons ?? [];
---

<AdminLayout title="Gestor de Cupones" activeSection="coupons">
  <!-- Industrial Actions Bar (Sticky) -->
  <div class="mb-12 sticky top-0 z-[100] px-0 pt-4 pb-12 bg-zinc-50/80 backdrop-blur-xl transition-all duration-300">
    <div class="bg-zinc-800 rounded-2xl p-1 shadow-[0_20px_50px_rgba(0,0,0,0.5)] relative border border-white/5">
        <div class="absolute inset-0 rounded-2xl overflow-hidden pointer-events-none">
            <div class="absolute -top-24 -right-24 w-96 h-96 bg-white/5 blur-[120px] rounded-full"></div>
        </div>
        
        <div class="relative z-10 flex flex-col xl:flex-row flex-wrap gap-4 items-center p-2 px-4 lg:px-6">
            <!-- Search Group -->
            <div class="relative flex-1 group/search w-full">
                <div class="absolute -top-3 left-8 px-3 py-1 bg-zinc-700 border border-white/10 rounded-sm z-20 opacity-0 group-focus-within/search:opacity-100 transition-all duration-500 translate-y-2 group-focus-within/search:translate-y-0 flex items-center gap-3 shadow-[0_10px_30px_rgba(0,0,0,0.8)]">
                    <div class="flex gap-0.5">
                        <div class="w-1 h-1 bg-white rounded-full animate-pulse"></div>
                        <div class="w-1 h-1 bg-white/40 rounded-full animate-pulse [animation-delay:200ms]"></div>
                        <div class="w-1 h-1 bg-white/10 rounded-full animate-pulse [animation-delay:400ms]"></div>
                    </div>
                    <span class="text-[7px] font-black text-white/90 uppercase tracking-[0.4em]">Audit_Protocol.Active</span>
                </div>

                <input 
                    type="text"
                    id="search-input"
                    placeholder="FILTRAR POR CÓDIGO O TIPO..."
                    class="w-full bg-white/5 border-2 border-white/10 rounded-xl px-14 py-6 text-white text-[10px] font-black uppercase tracking-[0.2em] focus:outline-none focus:border-white focus:bg-zinc-700/50 focus:ring-8 focus:ring-white/[0.03] focus:shadow-[0_0_50px_rgba(255,255,255,0.08)] focus:tracking-[0.3em] transition-all duration-500 placeholder:text-white/10 placeholder:font-bold selection:bg-white selection:text-black"
                />
                <svg class="absolute left-6 top-1/2 -translate-y-1/2 w-5 h-5 text-white/20 group-focus-within/search:text-white group-focus-within/search:scale-110 group-hover:text-white/40 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
            </div>

            <div class="hidden xl:block w-px h-10 bg-white/10"></div>

            <a 
                href="/admin/coupons/new" 
                class="h-14 bg-white text-black px-8 rounded-xl text-[9px] font-black uppercase tracking-[0.2em] hover:bg-zinc-100 active:scale-95 transition-all flex items-center gap-3 whitespace-nowrap shadow-xl"
            >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4"/></svg>
                <span>NUEVO CUPÓN</span>
            </a>
        </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="px-4 mb-8 grid grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="bg-white p-6 rounded-2xl border border-black/5 shadow-sm">
        <p class="text-[8px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-2">Total Cupones</p>
        <p class="text-2xl font-black text-black">{safeCoupons.length}</p>
    </div>
    <div class="bg-white p-6 rounded-2xl border border-black/5 shadow-sm">
        <p class="text-[8px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-2">Activos</p>
        <p class="text-2xl font-black text-green-600">{safeCoupons.filter(c => c.is_active).length}</p>
    </div>
    <div class="bg-white p-6 rounded-2xl border border-black/5 shadow-sm">
        <p class="text-[8px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-2">Porcentaje</p>
        <p class="text-2xl font-black text-black">{safeCoupons.filter(c => c.discount_type === 'percentage').length}</p>
    </div>
    <div class="bg-white p-6 rounded-2xl border border-black/5 shadow-sm">
        <p class="text-[8px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-2">Monto Fijo</p>
        <p class="text-2xl font-black text-black">{safeCoupons.filter(c => c.discount_type === 'fixed').length}</p>
    </div>
  </div>

  <!-- Info Bar -->
  <div class="mb-8 flex items-center gap-4 px-2">
    <div class="h-px flex-1 bg-black/[0.03]"></div>
    <div class="flex items-center gap-3 px-6 py-2 bg-white border border-black/5 rounded-full shadow-sm">
        <div class="w-1.5 h-1.5 bg-zinc-700 rounded-full animate-pulse"></div>
        <p class="text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em]" id="count-info">
            {safeCoupons.length} cupones registrados
        </p>
    </div>
    <div class="h-px flex-1 bg-black/[0.03]"></div>
  </div>

  <!-- Coupons Table -->
  <div class="bg-white rounded-2xl border border-zinc-200/60 shadow-xl overflow-hidden mb-20">
    <div class="overflow-x-auto">
      <table class="w-full text-left border-collapse" id="coupons-table">
        <thead class="bg-zinc-50 border-b-2 border-zinc-100">
          <tr>
            <th class="px-8 py-6 text-[11px] font-black text-black uppercase tracking-[0.2em]">Código</th>
            <th class="px-6 py-6 text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em]">Descuento</th>
            <th class="px-6 py-6 text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em]">Mín. Compra</th>
            <th class="px-6 py-6 text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em]">Usos</th>
            <th class="px-6 py-6 text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em]">Validez</th>
            <th class="px-6 py-6 text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em]">Estado</th>
            <th class="px-8 py-6 text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em] text-right">Acciones</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-black/[0.03]" id="coupons-body">
          {safeCoupons.length === 0 ? (
            <tr>
              <td colspan="7" class="px-8 py-20 text-center">
                <div class="flex flex-col items-center gap-4">
                  <div class="w-16 h-16 bg-zinc-50 rounded-full flex items-center justify-center">
                    <svg class="w-8 h-8 text-zinc-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
                    </svg>
                  </div>
                  <p class="text-zinc-300 font-black uppercase tracking-widest text-sm">No hay cupones registrados</p>
                  <a href="/admin/coupons/new" class="text-[10px] font-black text-black uppercase tracking-widest underline underline-offset-4 hover:text-zinc-600 transition-colors">
                    Crear primer cupón →
                  </a>
                </div>
              </td>
            </tr>
          ) : (
            safeCoupons.map((coupon) => {
              const isExpired = coupon.expires_at && new Date(coupon.expires_at) < new Date();
              const usagePercent = coupon.max_uses ? Math.round((coupon.current_uses / coupon.max_uses) * 100) : 0;
              const isMaxedOut = coupon.max_uses && coupon.current_uses >= coupon.max_uses;
              
              return (
                <tr class="group hover:bg-zinc-50/50 transition-all duration-500 border-l-[3px] border-transparent hover:border-zinc-200 coupon-row" 
                    data-code={coupon.code.toLowerCase()} 
                    data-type={coupon.discount_type}>
                  <td class="px-8 py-6">
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 bg-zinc-800 rounded-xl flex items-center justify-center">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
                        </svg>
                      </div>
                      <div>
                        <p class="text-sm font-black text-black uppercase tracking-tight">{coupon.code}</p>
                        <p class="text-[9px] font-bold text-zinc-400 uppercase tracking-wider">
                          {new Date(coupon.created_at).toLocaleDateString('es-ES')}
                        </p>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-6">
                    <div class="flex items-center gap-2">
                      <span class={`px-3 py-1.5 rounded-lg text-[10px] font-black uppercase tracking-wider ${coupon.discount_type === 'percentage' ? 'bg-purple-100 text-purple-700' : 'bg-emerald-100 text-emerald-700'}`}>
                        {coupon.discount_type === 'percentage' ? `${coupon.value}%` : `${coupon.value}€`}
                      </span>
                    </div>
                  </td>
                  <td class="px-6 py-6">
                    <span class="text-[11px] font-bold text-zinc-500">
                      {coupon.min_purchase_amount > 0 ? `${coupon.min_purchase_amount}€` : '—'}
                    </span>
                  </td>
                  <td class="px-6 py-6">
                    <div class="flex flex-col gap-1">
                      <span class={`text-[11px] font-black ${isMaxedOut ? 'text-red-500' : 'text-zinc-600'}`}>
                        {coupon.current_uses} / {coupon.max_uses ?? '∞'}
                      </span>
                      {coupon.max_uses && (
                        <div class="w-20 h-1 bg-zinc-100 rounded-full overflow-hidden">
                          <div class={`h-full transition-all ${isMaxedOut ? 'bg-red-500' : 'bg-zinc-400'}`} style={`width: ${usagePercent}%`}></div>
                        </div>
                      )}
                    </div>
                  </td>
                  <td class="px-6 py-6">
                    <div class="flex flex-col gap-1">
                      {coupon.expires_at ? (
                        <span class={`text-[10px] font-bold uppercase tracking-wider ${isExpired ? 'text-red-500' : 'text-zinc-500'}`}>
                          {isExpired ? 'EXPIRADO' : `Hasta ${new Date(coupon.expires_at).toLocaleDateString('es-ES')}`}
                        </span>
                      ) : (
                        <span class="text-[10px] font-bold text-zinc-400 uppercase tracking-wider">Sin límite</span>
                      )}
                    </div>
                  </td>
                  <td class="px-6 py-6">
                    <button 
                      data-id={coupon.id}
                      class={`toggle-btn px-4 py-2 rounded-xl text-[9px] font-black uppercase tracking-widest transition-all ${
                        coupon.is_active 
                          ? 'bg-green-100 text-green-700 hover:bg-green-200' 
                          : 'bg-zinc-100 text-zinc-400 hover:bg-zinc-200'
                      }`}
                    >
                      {coupon.is_active ? 'ACTIVO' : 'INACTIVO'}
                    </button>
                  </td>
                  <td class="px-8 py-6 text-right">
                    <div class="flex items-center justify-end gap-3 opacity-0 group-hover:opacity-100 transition-opacity">
                        <a href={`/admin/coupons/${coupon.id}/edit`} class="p-3 bg-white border border-black/5 text-zinc-400 hover:text-black hover:shadow-md rounded-xl transition-all">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                        </a>
                        <button 
                            data-id={coupon.id} 
                            data-code={coupon.code}
                            class="delete-btn p-3 bg-white border border-black/5 text-zinc-300 hover:text-red-600 hover:border-red-100 hover:shadow-md rounded-xl transition-all"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                        </button>
                    </div>
                  </td>
                </tr>
              );
            })
          )}
        </tbody>
      </table>
    </div>
  </div>

  <script>
    import { supabase } from '../../../lib/supabase';

    function initPage() {
        // Real-time search filter
        const searchInput = document.getElementById('search-input') as HTMLInputElement;
        const rows = document.querySelectorAll('.coupon-row');
        const countInfo = document.getElementById('count-info');
        const totalCount = rows.length;

        searchInput?.addEventListener('input', () => {
          const query = searchInput.value.toLowerCase().trim();
          let visibleCount = 0;

          rows.forEach(row => {
            const code = row.getAttribute('data-code') || '';
            const type = row.getAttribute('data-type') || '';
            const matches = code.includes(query) || type.includes(query);
            
            (row as HTMLElement).style.display = matches ? '' : 'none';
            if (matches) visibleCount++;
          });

          if (countInfo) {
            countInfo.textContent = query 
              ? `${visibleCount} DE ${totalCount} RESULTADOS` 
              : `${totalCount} CUPONES REGISTRADOS`;
          }
        });

        // Toggle functionality
        document.querySelectorAll('.toggle-btn').forEach(btn => {
          btn.addEventListener('click', async () => {
            const id = btn.getAttribute('data-id');
            if (!id) return;

            const { data, error } = await supabase.rpc('admin_toggle_coupon', { p_id: id });
            
            if (error) {
              (window as any).showIndustrialAlert('ERROR: ' + error.message, 'error');
            } else if (data && data.success === false) {
              (window as any).showIndustrialAlert('ERROR: ' + data.message, 'error');
            } else {
              (window as any).showIndustrialAlert(
                data.is_active ? 'CUPÓN ACTIVADO' : 'CUPÓN DESACTIVADO', 
                'success'
              );
              setTimeout(() => window.location.reload(), 500);
            }
          });
        });

        // Delete functionality
        document.querySelectorAll('.delete-btn').forEach(btn => {
          btn.addEventListener('click', async () => {
            const id = btn.getAttribute('data-id');
            const code = btn.getAttribute('data-code');

            if (!id) return;

            const confirmed = await customConfirm(
              'ELIMINAR CUPÓN',
              `¿ESTÁS SEGURO DE QUE QUIERES ELIMINAR EL CUPÓN "${code?.toUpperCase()}"? ESTA ACCIÓN NO SE PUEDE DESHACER.`,
              'danger'
            );

            if (confirmed) {
              const { data, error } = await supabase.rpc('admin_delete_coupon', { p_id: id });
              
              if (error) {
                (window as any).showIndustrialAlert('ERROR TÉCNICO: ' + error.message, 'error');
              } else if (data && data.success === false) {
                 (window as any).showIndustrialAlert('ERROR: ' + data.message, 'error');
              } else {
                (window as any).showIndustrialAlert('CUPÓN ELIMINADO', 'success');
                setTimeout(() => window.location.reload(), 500);
              }
            }
          });
        });

        // Helper for custom confirmation
        function customConfirm(title: string, message: string, variant: 'danger' | 'warning' | 'info' = 'info'): Promise<boolean> {
            return new Promise((resolve) => {
                const event = new CustomEvent('open-confirm-modal', {
                    detail: {
                        title,
                        message,
                        variant,
                        confirmText: 'CONFIRMAR',
                        cancelText: 'CANCELAR',
                        onConfirm: () => resolve(true),
                        onCancel: () => resolve(false)
                    }
                });
                window.dispatchEvent(event);
            });
        }
    }

    document.addEventListener('astro:page-load', initPage);
  </script>

  {/* Global Confirmation Modal Island */}
  <ConfirmationModal client:load />
</AdminLayout>
