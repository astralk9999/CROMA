---
import PublicLayout from '@layouts/PublicLayout.astro';
---

<PublicLayout title="Pago Exitoso">
  <div class="container-custom py-20 text-center">
    <div class="max-w-md mx-auto">
      <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-4">¡Gracias por tu compra!</h1>
      <p class="text-gray-600 mb-8">
        Tu pedido ha sido procesado exitosamente. Recibirás un correo electrónico de confirmación en breve.
      </p>
      <div class="space-y-4">
        <a 
          href="/account/orders"
          class="block w-full py-3 bg-black text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors"
        >
          Ver mis pedidos
        </a>
        <div id="invoice-action" class="hidden transition-all duration-500">
             <!-- Invoice Button Injected Here -->
        </div>
        <a 
          href="/"
          class="block w-full py-3 border-2 border-gray-200 text-gray-700 font-semibold rounded-lg hover:border-gray-900 transition-all font-medium"
        >
          Volver a la tienda
        </a>
      </div>
    </div>
  </div>
</PublicLayout>

<script>
  import { cartItems } from '@stores/cart';
  
  // Clear cart immediately
  cartItems.set({});

  // Verify Payment Status (Self-healing for local/webhook failures)
  const urlParams = new URLSearchParams(window.location.search);
  const sessionId = urlParams.get('session_id');

  if (sessionId) {
      fetch(`/api/verify-session?session_id=${sessionId}`)
          .then(res => res.json())
          .then(data => {
              console.log("Payment verification status:", data.status);
              
              if (data.orderId) {
                  const container = document.getElementById('invoice-action');
                  if (container) {
                      container.classList.remove('hidden');
                      container.innerHTML = `
                          <a href="/invoices/${data.orderId}" target="_blank" 
                             class="block w-full py-3 bg-gray-800 text-white font-semibold rounded-lg hover:bg-black transition-colors mb-4 flex items-center justify-center gap-2">
                             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                             Descargar Factura
                          </a>
                      `;
                  }
              }
          })
          .catch(err => console.error("Verification failed:", err));
  }
</script>
