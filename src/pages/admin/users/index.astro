import AdminLayout from '@layouts/AdminLayout.astro';
import { supabaseAdmin } from '@lib/supabase-admin';

// Search and filter parameters
const searchQuery = Astro.url.searchParams.get('search') || '';
const roleFilter = Astro.url.searchParams.get('role') || '';
const dateFilter = Astro.url.searchParams.get('date') || ''; // 'today', 'week', 'month'
const sortBy = Astro.url.searchParams.get('sort') || 'created_at_desc';

// Fetch users from the new analytics view
let query = supabaseAdmin
  .from('user_stats')
  .select('*');

// Apply Search (Name, Email, Phone) via RPC context or direct ILIKE
if (searchQuery) {
  query = query.or(`full_name.ilike.%${searchQuery}%,email.ilike.%${searchQuery}%,phone.ilike.%${searchQuery}%`);
}

// Apply Role Filter
if (roleFilter) {
  query = query.eq('role', roleFilter);
}

// Apply Date Filter
if (dateFilter) {
  const now = new Date();
  let startDate = new Date();
  
  if (dateFilter === 'today') {
    startDate.setHours(0, 0, 0, 0);
  } else if (dateFilter === 'week') {
    startDate.setDate(now.getDate() - 7);
  } else if (dateFilter === 'month') {
    startDate.setMonth(now.getMonth() - 1);
  }
  
  query = query.gte('created_at', startDate.toISOString());
}

// Apply Sorting (Server-side)
const [field, order] = sortBy.split('_');
const isAsc = order === 'asc';

if (sortBy === 'total_spent_desc') {
    query = query.order('total_spent', { ascending: false });
} else if (sortBy === 'total_spent_asc') {
    query = query.order('total_spent', { ascending: true });
} else if (sortBy === 'favorites_desc') {
    query = query.order('favorites_count', { ascending: false });
} else if (field === 'created_at') {
    query = query.order('created_at', { ascending: isAsc });
} else if (field === 'full_name') {
    query = query.order('full_name', { ascending: isAsc });
} else if (field === 'email') {
    query = query.order('email', { ascending: isAsc });
} else {
    query = query.order('created_at', { ascending: false });
}

const { data: users, error: fetchError } = await query;

if (fetchError) {
  console.error('[Admin Users] Fetch Error:', fetchError);
}

const totalUsers = users?.length || 0;
const adminCount = users?.filter(u => u.role === 'admin').length || 0;
const customerCount = totalUsers - adminCount;

const now = new Date();
const firstDayOfMonth = new Date(now.getFullYear(), now.getMonth(), 1);
const newThisMonth = users?.filter(u => new Date(u.created_at) >= firstDayOfMonth).length || 0;

