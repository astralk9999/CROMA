---
import PublicLayout from '@layouts/PublicLayout.astro';
import Sidebar from '@components/Sidebar.astro';
import ProductGrid from '@components/islands/ProductGrid';
import { supabase } from '@lib/supabase';

const { slug } = Astro.params;
const normalizedSlug = slug || 'BRAND';
let name = normalizedSlug.replace(/-/g, ' ').toUpperCase();

let filteredProducts = [];

// 1. Try to find the brand in the DB by slug to get its exact Name
const { data: brandData } = await supabase
  .from('brands')
  .select('name')
  .eq('slug', slug)
  .single();

if (brandData) {
    name = brandData.name.toUpperCase();
    
    // 2. Fetch products matching this brand name
    const { data: products } = await supabase
      .from('products')
      .select('*')
      .eq('brand', brandData.name)
      .order('created_at', { ascending: false });
      
    filteredProducts = products || [];
} else {
    // Fallback: try direct match if brand not found (e.g. legacy)
    const { data: products } = await supabase
      .from('products')
      .select('*')
      .eq('brand', slug)
      .order('created_at', { ascending: false });
      
    filteredProducts = products || [];
}
---

<PublicLayout title={name}>
  <section class="container-custom py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      {/* Sidebar */}
      <Sidebar />

      {/* Main Content */}
      <div class="flex-1">
        
        {/* Header */}
        <div class="mb-8 pb-4 border-b border-gray-200">
           <h1 class="text-4xl font-urban font-bold text-gray-900 mb-2 uppercase">{name}</h1>
           <p class="text-gray-600">Shop the latest from {name}.</p>
        </div>

        {/* Products Grid - React Island with Skeleton */}
        <div class="min-h-[50vh]">
          {filteredProducts && filteredProducts.length > 0 ? (
            <ProductGrid client:load products={filteredProducts} />
          ) : (
            <div class="text-center py-20">
              <p class="text-xl text-gray-500">No products found for this brand.</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</PublicLayout>
