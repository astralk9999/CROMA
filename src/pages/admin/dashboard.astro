import AdminLayout from '@layouts/AdminLayout.astro';
import { supabaseAdmin } from '@lib/supabase-admin';

const user = Astro.locals.user;
const profile = Astro.locals.profile;

// Fetch dashboard stats
const { data: products } = await supabaseAdmin
  .from('products')
  .select('*, categories(name)');

const { data: orders } = await supabaseAdmin
  .from('orders')
  .select('*, order_items(*)');

const { data: recentOrders } = await supabaseAdmin
  .from('orders')
  .select('*, order_items(*)')
  .order('created_at', { ascending: false })
  .limit(5);

const { data: latestCampaign } = await supabaseAdmin
  .from('marketing_campaigns')
  .select('*')
  .order('created_at', { ascending: false })
  .limit(1)
  .single();

const { count: subscriberCount } = await supabaseAdmin
  .from('newsletter_subscribers')
  .select('*', { count: 'exact', head: true });

const { count: userCount } = await supabaseAdmin
  .from('profiles')
  .select('*', { count: 'exact', head: true });

const { count: activeCoupons } = await supabaseAdmin
  .from('coupons')
  .select('*', { count: 'exact', head: true })
  .eq('is_active', true);

// Calculate stats
const totalProducts = products?.length || 0;
const totalOrders = orders?.length || 0;
const totalRevenue = orders?.reduce((sum, order) => sum + Number(order.total_amount), 0) || 0;
const pendingOrders = orders?.filter(o => o.status === 'pending').length || 0;
const marketingReach = (subscriberCount || 0) + (userCount || 0);

// Helper to calculate total stock
function getTotalStock(product: any) {
  if (!product.stock_by_sizes) return 0;
  return Object.values(product.stock_by_sizes as Record<string, number>).reduce((sum: number, qty: number) => sum + qty, 0);
}

// Low stock products
const lowStockProducts = products?.filter(p => getTotalStock(p) < 10) || [];
