---
import BaseLayout from './BaseLayout.astro';
import IndustrialToast from '@components/admin/IndustrialToast.astro';
import ConfirmationModal from '@components/islands/ConfirmationModal';

interface Props {
  title: string;
  activeSection?: 'dashboard' | 'products' | 'categories' | 'brands' | 'orders' | 'colors' | 'users' | 'returns' | 'coupons' | 'marketing';
}

const { title, activeSection } = Astro.props;
const user = Astro.locals.user;
const profile = Astro.locals.profile;

// Redirect if not admin
if (!user || profile?.role !== 'admin') {
  return Astro.redirect('/auth/login');
}

// Navigation grouped by sections
const navSections = [
  {
    title: 'General',
    items: [
      { 
        id: 'dashboard', 
        label: 'Dashboard', 
        href: '/admin/dashboard',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>`
      }
    ]
  },
  {
    title: 'Catálogo',
    items: [
      { 
        id: 'products', 
        label: 'Productos', 
        href: '/admin/products',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>`
      },
      { 
        id: 'categories', 
        label: 'Categorías', 
        href: '/admin/categories',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>`
      },
      { 
        id: 'brands', 
        label: 'Marcas', 
        href: '/admin/brands',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>`
      },
      { 
        id: 'colors', 
        label: 'Colores', 
        href: '/admin/colors',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>`
      }
    ]
  },
  {
    title: 'Ventas',
    items: [
      { 
        id: 'orders', 
        label: 'Pedidos', 
        href: '/admin/orders',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>`
      },
      { 
        id: 'coupons', 
        label: 'Cupones', 
        href: '/admin/coupons',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>`
      },
      { 
        id: 'returns', 
        label: 'Devoluciones', 
        href: '/admin/returns',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 15v-1a4 4 0 00-4-4H8m0 0l3 3m-3-3l3-3m9 14V5a2 2 0 00-2-2H6a2 2 0 00-2 2v16l4-2 4 2 4-2 4 2z"/>`
      }
    ]
  },
  {
    title: 'Sistema',
    items: [
      { 
        id: 'users', 
        label: 'Usuarios', 
        href: '/admin/users',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />`
      },
      { 
        id: 'marketing', 
        label: 'Marketing', 
        href: '/admin/marketing',
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />`
      }
    ]
  }
];
---

<BaseLayout title={title}>
  <div class="flex h-screen bg-[#FDFDFD] font-sans selection:bg-zinc-800 selection:text-white">
    <!-- Sidebar -->
    <aside class="w-72 bg-zinc-800 text-white flex flex-col fixed h-full z-40 border-r border-white/10 shadow-2xl">
      <!-- Logo Section -->
      <div class="p-8 border-b border-white/15 mb-4">
        <a href="/admin/dashboard" class="group flex items-center gap-4">
          <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center transition-transform duration-500 group-hover:rotate-[360deg] shadow-[0_0_20px_rgba(255,255,255,0.2)] overflow-hidden p-2">
            <img src="/brand/logo_c_horns.png" alt="C" class="w-full h-full object-contain" />
          </div>
          <div>
            <h1 class="text-xl font-black tracking-widest uppercase leading-none">CROMA</h1>
            <p class="text-[10px] text-zinc-500 font-bold uppercase tracking-[0.3em] mt-1">Industrial Control</p>
          </div>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="flex-1 px-4 overflow-y-auto custom-scrollbar pb-4">
        {navSections.map((section, sectionIndex) => (
          <div class={sectionIndex > 0 ? 'mt-6' : ''}>
            {/* Section Header */}
            <div class="flex items-center gap-3 px-2 mb-3">
              <p class="text-[9px] font-black text-zinc-500 uppercase tracking-[0.25em]">{section.title}</p>
              <div class="flex-1 h-px bg-gradient-to-r from-zinc-700 to-transparent"></div>
            </div>
            
            {/* Section Items */}
            <div class="space-y-1">
              {section.items.map(item => (
                <a 
                  href={item.href}
                  class={`group relative flex items-center gap-4 px-4 py-3.5 rounded-lg text-xs font-black uppercase tracking-widest transition-all duration-300 overflow-hidden ${
                    activeSection === item.id 
                      ? 'bg-white text-black translate-x-1 shadow-[4px_4px_20px_rgba(255,255,255,0.1)]' 
                      : 'text-zinc-500 hover:text-white hover:bg-zinc-900/50'
                  }`}
                >
                  {/* Active Indicator */}
                  {activeSection === item.id && (
                      <div class="absolute left-0 top-0 bottom-0 w-1 bg-black"></div>
                  )}
                  
                  <svg class={`w-5 h-5 flex-shrink-0 transition-transform duration-500 ${activeSection === item.id ? '' : 'group-hover:scale-110 group-hover:rotate-6'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <Fragment set:html={item.icon} />
                  </svg>
                  <span class="relative z-10">{item.label}</span>
                  
                  {/* Animated accent on hover (if not active) */}
                  {activeSection !== item.id && (
                      <div class="absolute inset-0 bg-white translate-y-full group-hover:translate-y-0 transition-transform duration-300 -z-0 opacity-[0.03]"></div>
                  )}
                </a>
              ))}
            </div>
          </div>
        ))}
      </nav>

      <!-- Account & Footer -->
      <div class="p-6 mt-auto">
        <div class="bg-zinc-700/50 border border-white/10 rounded-xl p-5 mb-4 backdrop-blur-md">
          <div class="flex items-center gap-3 mb-4">
             <div class="w-10 h-10 rounded-full bg-gradient-to-tr from-zinc-700 to-zinc-500 flex items-center justify-center font-bold text-white shadow-inner">
                {profile?.full_name?.charAt(0) || 'A'}
             </div>
             <div class="min-w-0">
                <p class="text-xs font-black truncate">{profile?.full_name || 'Admin'}</p>
                <p class="text-[10px] text-zinc-500 font-bold truncate uppercase tracking-tighter">{profile?.email}</p>
             </div>
          </div>
          
          <div class="grid grid-cols-2 gap-2">
            <a 
                href="/" 
                class="flex items-center justify-center gap-2 py-2.5 bg-zinc-600 hover:bg-zinc-500 text-zinc-300 hover:text-white rounded-lg text-[10px] font-black uppercase tracking-widest transition-all"
                title="Ver Tienda"
            >
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
            </a>
            <a 
                href="/auth/logout" 
                class="flex items-center justify-center gap-2 py-2.5 bg-zinc-600 hover:bg-red-900 text-zinc-300 hover:text-red-300 rounded-lg text-[10px] font-black uppercase tracking-widest transition-all border border-transparent hover:border-red-800/30"
                title="Cerrar Sesión"
            >
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
            </a>
          </div>
        </div>
        
        <p class="text-[9px] text-zinc-400 font-bold uppercase tracking-[0.2em] text-center">CROMA &copy; {new Date().getFullYear()}</p>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 ml-72 min-w-0 overflow-y-auto overflow-x-hidden bg-[#FDFDFD]">
      <!-- Refined Header (Non-sticky to prevent overlap with control bars) -->
      <header class="flex items-center justify-between px-10 py-8 bg-[#FDFDFD] border-b border-black/[0.03]">
        <div class="flex items-center gap-4">
            <div class="w-1 h-8 bg-zinc-900"></div>
            <div>
                <h1 class="text-2xl font-black tracking-tighter text-black uppercase">{title}</h1>
                <div class="flex items-center gap-2 mt-0.5">
                    <span class="text-[9px] font-black text-zinc-400 uppercase tracking-widest">Admin</span>
                    <span class="text-[9px] text-zinc-200">/</span>
                    <span class="text-[9px] font-black text-zinc-400 uppercase tracking-widest">{activeSection || 'General'}</span>
                </div>
            </div>
        </div>
        
        <div class="flex items-center gap-6">
            <div class="w-8 h-8 rounded bg-zinc-900 flex items-center justify-center p-1.5 shadow-lg border border-white/10">
                <img src="/brand/logo_c_horns.png" alt="CROMA" class="w-full h-full object-contain invert" />
            </div>
            
            <!-- Optional Notification or Status -->
            <div class="hidden md:flex items-center gap-2 px-4 py-2 bg-green-50 rounded-lg border border-green-100">
                <div class="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse"></div>
                <span class="text-[9px] font-black text-green-700 uppercase tracking-widest">Sistema Online</span>
            </div>
        </div>
      </header>

      <!-- Page Content -->
      <div class="p-10 max-w-[1600px] mx-auto">
        <slot />
      </div>
    </main>
  </div>

  <IndustrialToast />
  <ConfirmationModal client:load />

  <style is:global>
    /* Premium custom scrollbar for sidebar */
    .custom-scrollbar::-webkit-scrollbar {
      width: 4px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
      background: transparent;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
      background: #333;
      border-radius: 10px;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
      background: #444;
    }
  </style>
</BaseLayout>
