---
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

const user = Astro.locals.user;
const profile = Astro.locals.profile;

if (!user || profile?.role !== 'admin') {
  return Astro.redirect('/auth/login');
}

const { id } = Astro.params;

// Fetch product to edit
const { data: product, error } = await supabase
  .from('products')
  .select('*')
  .eq('id', id)
  .single();

if (error || !product) {
  return Astro.redirect('/admin/products');
}

// Fetch categories and brands
const { data: categories } = await supabase
  .from('categories')
  .select('*')
  .order('name');

const { data: brands } = await supabase
  .from('brands')
  .select('*')
  .order('name');

// Format datetime for input (YYYY-MM-DDTHH:mm)
const formatDateTime = (dateString: string | null) => {
  if (!dateString) return '';
  return new Date(dateString).toISOString().slice(0, 16);
};
---

<AdminLayout title={`Editar: ${product.name}`} activeSection="products">
      <div class="max-w-4xl">
        <div class="flex items-center justify-between mb-6">
          <div>
            <p class="text-sm text-gray-600">ID: {product.id}</p>
          </div>
          <a href="/admin/products" class="text-sm text-gray-600 hover:text-black">
            ← Volver a productos
          </a>
        </div>
        <form id="edit-product-form" class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 space-y-8">
          <input type="hidden" name="id" value={product.id} />
          <input type="hidden" id="initial-images" value={JSON.stringify(product.images || [])} />
          
            <!-- Basic Info -->
            <div>
            <h2 class="text-lg font-bold text-gray-900 mb-4">Información Básica</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Nombre del Producto *</label>
                <input type="text" id="name" name="name" required value={product.name} class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black" />
                </div>

                <div class="md:col-span-2">
                <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">Descripción</label>
                <textarea id="description" name="description" rows="4" class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black">{product.description}</textarea>
                </div>

                <div>
                <label for="price" class="block text-sm font-semibold text-gray-700 mb-2">Precio (€) *</label>
                <input type="number" id="price" name="price" required step="0.01" min="0" value={product.price} class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black" />
                </div>

                <!-- DYNAMIC CATEGORY -->
                <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700">Categoría</label>
            <select name="category" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-black">
              <option value="">Seleccionar categoría</option>
              {categories?.map(cat => (
                <option value={cat.name} selected={product.category === cat.name}>{cat.name}</option>
              ))}
            </select>
          </div>

          <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700">Marca</label>
            <select name="brand" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-black">
              <option value="">Seleccionar marca</option>
              {brands?.map(brand => (
                <option value={brand.name} selected={product.brand === brand.name}>{brand.name}</option>
              ))}
            </select>
          </div>
                <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Opciones</label>
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" name="featured" checked={product.featured} class="w-5 h-5 text-black border-gray-300 rounded focus:ring-black" />
                    <span class="text-sm text-gray-700">Producto Destacado</span>
                </label>
                </div>
            </div>
            </div>

            <!-- OFFERS & DROPS -->
            <div class="p-6 bg-gray-50 rounded-xl border border-gray-200">
                <h2 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                    <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    Oferta / Drop Limitado
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label for="available_from" class="block text-sm font-semibold text-gray-700 mb-2">Fecha de Lanzamiento (Drop)</label>
                        <input type="datetime-local" id="available_from" name="available_from" value={formatDateTime(product.available_from)} class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black" />
                        <p class="text-xs text-gray-500 mt-1">Dejar vacío si ya está disponible</p>
                    </div>
                    <div>
                        <label for="sale_price" class="block text-sm font-semibold text-gray-700 mb-2">Precio de Oferta (€)</label>
                        <input type="number" id="sale_price" name="sale_price" step="0.01" min="0" value={product.sale_price} class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black" placeholder="Opcional" />
                    </div>
                    <div>
                        <label for="sale_ends_at" class="block text-sm font-semibold text-gray-700 mb-2">Fin de la Oferta</label>
                        <input type="datetime-local" id="sale_ends_at" name="sale_ends_at" value={formatDateTime(product.sale_ends_at)} class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black" />
                    </div>
                </div>
            </div>

            <!-- Colors -->
            <div>
            <h2 class="text-lg font-bold text-gray-900 mb-4">Colores</h2>
            <div id="colors-container" class="space-y-2">
                {(product.colors || []).map((color: string) => (
                    <div class="flex gap-2">
                    <input type="text" name="color" value={color} class="flex-1 px-4 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black" />
                    <button type="button" class="remove-color px-3 py-2 text-red-600 hover:text-red-800"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg></button>
                    </div>
                ))}
            </div>
            <button type="button" id="add-color-btn" class="mt-2 text-sm text-black hover:underline font-medium">+ Añadir otro color</button>
            </div>

            <!-- Stock -->
            <div>
            <h2 class="text-lg font-bold text-gray-900 mb-4">Stock por Talla</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {['S', 'M', 'L', 'XL'].map(size => (
                    <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">{size}</label>
                    <input type="number" name={`stock_${size}`} min="0" value={product.stock_by_sizes?.[size] || 0} class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black" />
                    </div>
                ))}
            </div>
            </div>

            <!-- Images -->
            <div>
             <h2 class="text-lg font-bold text-gray-900 mb-4">Imágenes</h2>
             <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
                <input type="file" id="images" name="images" accept="image/*" multiple class="hidden" />
                <label for="images" class="cursor-pointer">
                    <svg class="mx-auto w-12 h-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/></svg>
                    <span class="font-semibold text-black">Añadir más imágenes</span>
                </label>
             </div>
             <div id="image-preview" class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4">
                 {(product.images || []).map((img: string, idx: number) => (
                     <div class="relative group">
                         <img src={img} class="w-full h-32 object-cover rounded-lg" />
                         <button type="button" class="remove-existing-image absolute top-2 right-2 bg-red-500 text-white p-1 rounded-full opacity-0 group-hover:opacity-100 transition-opacity" data-url={img}>
                             <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                         </button>
                     </div>
                 ))}
             </div>
             <div id="upload-progress" class="mt-4 hidden text-center"><p>Subiendo...</p></div>
            </div>

            <!-- Submit -->
            <div class="flex items-center justify-end gap-4 pt-6 border-t border-gray-200">
                <a href="/admin/products" class="px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-lg hover:border-gray-400 font-medium">Cancelar</a>
                <button type="submit" id="submit-btn" class="px-6 py-3 bg-black text-white rounded-lg hover:bg-gray-800 font-medium">Guardar Cambios</button>
            </div>
        </form>
      </div>
</AdminLayout>

  <script>
    import { supabase } from '../../../../lib/supabase';

    const form = document.getElementById('edit-product-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const imagesInput = document.getElementById('images') as HTMLInputElement;
    const imagePreview = document.getElementById('image-preview') as HTMLDivElement;
    const uploadProgress = document.getElementById('upload-progress') as HTMLDivElement;
    const progressBar = document.getElementById('progress-bar') as HTMLDivElement;
    const progressText = document.getElementById('progress-text') as HTMLParagraphElement;

    // Manage existing images state
    let currentImages = JSON.parse((document.getElementById('initial-images') as HTMLInputElement).value || '[]');
    let selectedFiles: File[] = [];
    let uploadedImageUrls: string[] = [];

    // Remove existing image
    document.querySelectorAll('.remove-existing-image').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const button = e.currentTarget as HTMLButtonElement;
            const urlToRemove = button.dataset.url;
            currentImages = currentImages.filter((url: string) => url !== urlToRemove);
            button.closest('.relative')?.remove();
        });
    });
    
    // Add color handling (copied from new.astro)
    document.getElementById('add-color-btn')?.addEventListener('click', () => {
      const container = document.getElementById('colors-container');
      const newInput = document.createElement('div');
      newInput.className = 'flex gap-2';
      newInput.innerHTML = `
        <input type="text" name="color" placeholder="Ej: red, green" class="flex-1 px-4 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black" />
        <button type="button" class="remove-color px-3 py-2 text-red-600 hover:text-red-800"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg></button>
      `;
      container?.appendChild(newInput);
      newInput.querySelector('.remove-color')?.addEventListener('click', () => newInput.remove());
    });
    
    // Remove handler for existing colors
    document.querySelectorAll('.remove-color').forEach(btn => {
        btn.addEventListener('click', (e) => {
            (e.currentTarget as HTMLElement).closest('.flex')?.remove();
        });
    });

    // Image preview for NEW files
    imagesInput.addEventListener('change', (e) => {
      const files = Array.from(imagesInput.files || []);
      selectedFiles = files;
      
      files.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = (e) => {
          const div = document.createElement('div');
          div.className = 'relative group border-2 border-blue-500 rounded-lg'; // Highlight new images
          div.innerHTML = `
            <img src="${e.target?.result}" class="w-full h-32 object-cover rounded-lg" />
            <span class="absolute top-0 left-0 bg-blue-500 text-white text-xs px-2 py-1 rounded-br">Nuevo</span>
          `;
          imagePreview.appendChild(div);
        };
        reader.readAsDataURL(file);
      });
    });

    // Upload function (reused)
    async function uploadImagesToCloudinary(files: File[]): Promise<string[]> {
      const cloudName = import.meta.env.PUBLIC_CLOUDINARY_CLOUD_NAME;
      const uploadPreset = import.meta.env.PUBLIC_CLOUDINARY_PRESET || 'croma_uploads';
      const urls: string[] = [];

      uploadProgress.classList.remove('hidden');
      
      for (let i = 0; i < files.length; i++) {
        const file = files[i];
        const formData = new FormData();
        formData.append('file', file);
        formData.append('upload_preset', uploadPreset);
        formData.append('folder', 'croma/products');

        try {
          const response = await fetch(
            `https://api.cloudinary.com/v1_1/${cloudName}/image/upload`,
            { method: 'POST', body: formData }
          );

          if (!response.ok) throw new Error('Upload failed');
          const data = await response.json();
          urls.push(data.secure_url);
        } catch (error) {
          console.error('Error uploading image:', error);
          throw error;
        }
      }
      uploadProgress.classList.add('hidden');
      return urls;
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      submitBtn.disabled = true;
      submitBtn.textContent = 'Guardando...';

      try {
        // Upload new images
        if (selectedFiles.length > 0) {
          uploadedImageUrls = await uploadImagesToCloudinary(selectedFiles);
        }

        // Combine old and new images
        const finalImages = [...currentImages, ...uploadedImageUrls];

        const formData = new FormData(form);
        const name = formData.get('name') as string;
        const description = formData.get('description') as string;
        const price = parseFloat(formData.get('price') as string);
        const category = formData.get('category') as string;
        const brand = formData.get('brand') as string;
        const featured = formData.get('featured') === 'on';
        const productId = formData.get('id') as string;

        // Sale info
        const salePriceRaw = formData.get('sale_price') as string;
        const salePrice = salePriceRaw ? parseFloat(salePriceRaw) : null;
        const saleEndsAtRaw = formData.get('sale_ends_at') as string;
        const saleEndsAt = saleEndsAtRaw ? new Date(saleEndsAtRaw).toISOString() : null;
        
        // Available From (Drops)
        const availableFromRaw = formData.get('available_from') as string;
        const availableFrom = availableFromRaw ? new Date(availableFromRaw).toISOString() : null;

        const colorInputs = form.querySelectorAll('input[name="color"]');
        const colors = Array.from(colorInputs).map(input => (input as HTMLInputElement).value.trim()).filter(c => c !== '');

        const stockBySizes: Record<string, number> = {};
        form.querySelectorAll('input[name^="stock_"]').forEach(input => {
          const size = (input as HTMLInputElement).name.replace('stock_', '');
          const quantity = parseInt((input as HTMLInputElement).value) || 0;
          if (quantity > 0) stockBySizes[size] = quantity;
        });

        // Update product using RPC
        const slug = name.toLowerCase()
          .normalize('NFD')
          .replace(/[\u0300-\u036f]/g, '')
          .replace(/[^a-z0-9]+/g, '-')
          .replace(/^-+|-+$/g, '');

        const { data, error: updateError } = await supabase.rpc('admin_update_product', {
          p_product_id: productId,
          p_updates: {
             name, slug, description, price, category, brand, images: finalImages, 
             stock_by_sizes: stockBySizes, featured, sale_price: salePrice, 
             sale_ends_at: saleEndsAt, available_from: availableFrom, colors
          }
        });
        if (updateError) throw updateError;

        alert('Producto actualizado exitosamente');
        window.location.href = '/admin/products';
      } catch (error: any) {
        console.error('Error updating:', error);
        alert('Error: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = 'Guardar Cambios';
      }
    });
  </script>
</AdminLayout>
