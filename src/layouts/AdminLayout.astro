---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="flex h-screen bg-cream-100">
    {/* Sidebar */}
    <aside class="w-64 bg-navy-900 text-white">
      <div class="p-6">
        <h1 class="text-2xl font-serif font-bold mb-8">Admin Panel</h1>
        <nav class="space-y-2">
          <a 
            href="/admin" 
            class="block px-4 py-2 rounded hover:bg-navy-800 transition-colors"
          >
            Dashboard
          </a>
          <a 
            href="/admin/productos" 
            class="block px-4 py-2 rounded hover:bg-navy-800 transition-colors"
          >
            Productos
          </a>
          <a 
            href="/admin/productos/nuevo" 
            class="block px-4 py-2 rounded hover:bg-navy-800 transition-colors"
          >
            Nuevo Producto
          </a>
        </nav>
      </div>
      
      <div class="absolute bottom-0 w-64 p-6 border-t border-navy-700">
        <form action="/admin/logout" method="POST">
          <button 
            type="submit"
            class="w-full px-4 py-2 bg-red-600 hover:bg-red-700 rounded transition-colors"
          >
            Cerrar Sesi√≥n
          </button>
        </form>
      </div>
    </aside>

    {/* Main Content */}
    <main class="flex-1 overflow-y-auto">
      <div class="container-custom py-8">
        <slot />
      </div>
    </main>
  </div>
</BaseLayout>
