<aside class="w-64 flex-shrink-0 pr-8 hidden lg:block">
  <div class="sticky top-24 overflow-y-auto max-h-[calc(100vh-6rem)] scrollbar-hide">
    
    {/* View All Section */}
    <div class="mb-8">
       <a href="/category/all" 
          class="flex items-center text-xl font-urban font-black text-gray-900 hover:text-brand-red transition-all duration-300 uppercase tracking-widest border-b-4 border-gray-900 pb-2 hover:border-brand-red">
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path></svg>
          View All / Todo
       </a>
    </div>

    {/* Specials Section */}
    <div class="mb-12">
      <h3 class="font-urban font-black text-2xl uppercase mb-6 flex items-center text-gray-900 border-b-2 border-gray-900 pb-2">
        <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path></svg>
        Specials
      </h3>
      <ul class="space-y-3">
        {[
           { name: 'Coming soon', slug: 'coming-soon' },
           { name: 'VIRAL TRENDS', slug: 'viral-trends' },
           { name: 'SALE', slug: 'sale' },
           { name: 'My favorites', slug: 'my-favorites' },
           { name: 'Bestsellers', slug: 'bestsellers' }
        ].map(item => (
          <li>
            <a href={`/category/${item.slug}`} 
               class="flex items-center text-lg font-urban font-bold text-gray-600 hover:text-black hover:translate-x-2 transition-all duration-300 uppercase">
               <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
               {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>

    {/* Categories Section */}
    <div class="mb-12">
      <h3 class="font-urban font-black text-2xl uppercase mb-6 flex items-center text-gray-900 border-b-2 border-gray-900 pb-2">
        <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        Categories
      </h3>
      <ul class="space-y-3">
        {[
          'Jackets', 'Sweatshirt / Pullover', 'T-Shirts', 'Trousers', 'Denim', 
          'Shirts', 'Accessories', 'Underwear & Socks', 'Sportswear', 'Shoes'
        ].map(item => (
          <li>
            <a href={`/category/${item.toLowerCase().replace(/ /g, '-').replace(/\//g, '').replace(/&/g, 'and')}`} 
               class="flex items-center text-lg font-urban font-bold text-gray-600 hover:text-black hover:translate-x-2 transition-all duration-300 uppercase">
               <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
               {item}
            </a>
          </li>
        ))}
      </ul>
    </div>

    {/* Brands Section */}
    <div class="mb-12">
      <h3 class="font-urban font-black text-2xl uppercase mb-6 flex items-center text-gray-900 border-b-2 border-gray-900 pb-2">
        <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path></svg>
        Brands
      </h3>
      <ul class="space-y-3">
        {[
          'SMOG', 'FSBN', 'BLACK SQUAD', 'ICONO', 'IQ', 'LUCKY ATHLETES'
        ].map(item => (
          <li>
             <a href={`/brand/${item.toLowerCase().replace(/ /g, '-')}`} 
               class="flex items-center text-lg font-urban font-bold text-gray-600 hover:text-black hover:translate-x-2 transition-all duration-300 uppercase tracking-wide">
               <span class="w-2 h-2 bg-gray-400 mr-3 rounded-full"></span>
               {item}
            </a>
          </li>
        ))}
      </ul>
    </div>

    {/* Colors Section */}
    <div class="mb-12">
      <h3 class="font-urban font-black text-2xl uppercase mb-6 flex items-center text-gray-900 border-b-2 border-gray-900 pb-2">
        <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path></svg>
        Colors
      </h3>
      <ul class="space-y-2">
        {[
          { name: 'Beige', class: 'bg-[#F5F5DC]' },
          { name: 'Blue', class: 'bg-blue-600' },
          { name: 'Brown', class: 'bg-amber-800' },
          { name: 'Gold', class: 'bg-yellow-500' },
          { name: 'Green', class: 'bg-green-600' },
          { name: 'Grey/Black', class: 'bg-gray-800' },
          { name: 'Orange', class: 'bg-orange-500' },
          { name: 'Pink', class: 'bg-pink-500' },
          { name: 'Red', class: 'bg-red-600' },
          { name: 'Silver', class: 'bg-gray-300' },
          { name: 'Violet', class: 'bg-violet-600' },
          { name: 'White', class: 'bg-white border border-gray-300' },
          { name: 'Yellow', class: 'bg-yellow-400' }
        ].map(item => (
          <li>
             <a href={`/color/${item.name.toLowerCase().replace('/', '-').replace(/ /g, '-')}`} 
               class="flex items-center text-lg font-urban font-bold text-gray-600 hover:text-black transition-all duration-300 uppercase">
               <span class={`w-6 h-6 ${item.class} mr-3 rounded-md shadow-sm border border-gray-100`}></span>
               {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>

  </div>
</aside>
