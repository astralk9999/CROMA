---
import BaseLayout from './BaseLayout.astro';
import CartIcon from '@components/islands/CartIcon';
import CartSlideOver from '@components/islands/CartSlideOver';
import UserMenu from '@components/islands/UserMenu';
import MobileMenu from '@components/islands/MobileMenu';
import SearchWidget from '@components/islands/SearchWidget';
import NewsletterPopup from '@components/islands/NewsletterPopup';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <header class="bg-white border-b border-gray-200 sticky top-0 z-30 h-16 md:h-24 transition-all duration-300">
    <nav class="container-custom h-full flex items-center">
      <div class="flex items-center justify-between w-full">
        
        {/* Left: Hamburger Menu */}
        <div class="flex items-center">
            <MobileMenu client:load initialProfile={Astro.locals.profile} currentPath={Astro.url.pathname} />
        </div>

        {/* Center: Logo */}
        <a href="/" class="absolute left-1/2 transform -translate-x-1/2 flex items-center justify-center">
          <img 
            src="/chromakopia_logo.png" 
            alt="CROMA" 
            class="h-12 md:h-24 w-auto object-contain transition-all duration-300" 
            onerror="this.style.display='none'; this.nextElementSibling.classList.remove('hidden');"
          />
          <span class="hidden text-xl md:text-3xl font-black tracking-tighter text-gray-900 uppercase">Croma</span>
        </a>

        <div class="flex items-center space-x-1 md:space-x-4">
          
          {/* Search Widget */}
          <div class="flex items-center justify-center w-10 h-10">
            <SearchWidget client:load />
          </div>
          
          {/* User Menu Widget */}
          <div class="flex items-center justify-center w-10 h-10">
            <UserMenu client:load initialProfile={Astro.locals.profile} currentPath={Astro.url.pathname} />
          </div>

          {/* Cart Icon */}
          <div class="flex items-center justify-center w-10 h-10">
            <CartIcon client:load />
          </div>
        </div>
      </div>
    </nav>
  </header>

  {/* Main Content */}
  <main>
    <slot />
  </main>

  {/* Footer */}
  <footer class="bg-gray-900 text-gray-100 mt-12 md:mt-24">
    <div class="container-custom py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8">
        <div class="text-center md:text-left">
          <h3 class="text-2xl font-urban font-bold mb-4 tracking-tighter">CROMA</h3>
          <p class="text-gray-400 max-w-xs mx-auto md:mx-0">Premium urban fashion for the modern era.</p>
        </div>
        <div class="text-center md:text-left">
          <h4 class="font-semibold mb-6 md:mb-4 uppercase tracking-widest text-sm text-gray-500">Info</h4>
          <ul class="space-y-4 md:space-y-2 text-gray-300 md:text-gray-400">
            <li><a href="/about" class="hover:text-white transition-colors block py-1">About Us</a></li>
            <li><a href="/shipping" class="hover:text-white transition-colors block py-1">Shipping & Returns</a></li>
            <li><a href="/contact" class="hover:text-white transition-colors block py-1">Contact</a></li>
          </ul>
        </div>
        <div class="text-center md:text-left">
          <h4 class="font-semibold mb-6 md:mb-4 uppercase tracking-widest text-sm text-gray-500">Legal</h4>
          <ul class="space-y-4 md:space-y-2 text-gray-300 md:text-gray-400">
            <li><a href="/privacy" class="hover:text-white transition-colors block py-1">Privacy Policy</a></li>
            <li><a href="/terms" class="hover:text-white transition-colors block py-1">Terms of Service</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-800 mt-12 md:mt-8 pt-8 flex flex-col md:flex-row justify-between items-center text-gray-500 text-sm gap-6">
        <p>&copy; {new Date().getFullYear()} CROMA. All rights reserved.</p>
        
        {Astro.locals.profile?.role === 'admin' && (
          <a href="/admin/dashboard" class="text-brand-red font-bold uppercase tracking-widest hover:underline p-2 border border-brand-red/20 rounded-sm">
            Panel de Administración →
          </a>
        )}
      </div>
    </div>
  </footer>

  {/* Cart Slide Over */}
  <CartSlideOver client:load />

  <script>
    import { syncFavoritesWithSupabase } from '@stores/favorites';
    import { supabase } from '@lib/supabase';
    
    // Sync favorites on load
    syncFavoritesWithSupabase();

    // Nudge session on page load/transition to ensure client-side sync
    document.addEventListener('astro:page-load', async () => {
      // Small delay to ensure cookies are processed if they were just set
      setTimeout(async () => {
        await supabase.auth.getSession();
      }, 100);
    });
  </script>
</BaseLayout>
