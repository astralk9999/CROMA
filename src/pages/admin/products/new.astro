---
import BaseLayout from '@layouts/BaseLayout.astro';

const user = Astro.locals.user;
const profile = Astro.locals.profile;

if (!user || profile?.role !== 'admin') {
  return Astro.redirect('/auth/login');
}

const categories = [
  'jackets',
  'sweatshirt-pullover',
  't-shirts',
  'trousers',
  'denim',
  'shirts',
  'accessories',
  'underwear-socks',
  'sportswear',
  'shoes'
];

const brands = [
  'black-squad',
  'urban-edge',
  'street-kings',
  'minimal-co',
  'rebel-wear'
];
---

<BaseLayout title="Añadir Producto">
  <div class="min-h-screen bg-gray-50">
    <!-- Admin Header -->
    <header class="bg-white border-b border-gray-200">
      <div class="container-custom py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Añadir Nuevo Producto</h1>
            <p class="text-sm text-gray-600">Completa el formulario para crear un producto</p>
          </div>
          <div class="flex items-center gap-4">
            <a href="/admin/products" class="text-sm text-gray-600 hover:text-black">
              ← Volver a productos
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container-custom py-8">
      <div class="max-w-4xl mx-auto">
        <form id="product-form" class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 space-y-8">
          <!-- Basic Information -->
          <div>
            <h2 class="text-lg font-bold text-gray-900 mb-4">Información Básica</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="md:col-span-2">
                <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                  Nombre del Producto *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                  placeholder="Ej: Urban Bomber Jacket"
                />
              </div>

              <div class="md:col-span-2">
                <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">
                  Descripción
                </label>
                <textarea
                  id="description"
                  name="description"
                  rows="4"
                  class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                  placeholder="Descripción detallada del producto..."
                ></textarea>
              </div>

              <div>
                <label for="price" class="block text-sm font-semibold text-gray-700 mb-2">
                  Precio (€) *
                </label>
                <input
                  type="number"
                  id="price"
                  name="price"
                  required
                  step="0.01"
                  min="0"
                  class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                  placeholder="99.99"
                />
              </div>

              <div>
                <label for="category" class="block text-sm font-semibold text-gray-700 mb-2">
                  Categoría *
                </label>
                <select
                  id="category"
                  name="category"
                  required
                  class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                >
                  <option value="">Seleccionar categoría</option>
                  {categories.map(cat => (
                    <option value={cat}>{cat}</option>
                  ))}
                </select>
              </div>

              <div>
                <label for="brand" class="block text-sm font-semibold text-gray-700 mb-2">
                  Marca
                </label>
                <select
                  id="brand"
                  name="brand"
                  class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                >
                  <option value="">Seleccionar marca</option>
                  {brands.map(brand => (
                    <option value={brand}>{brand}</option>
                  ))}
                </select>
              </div>

              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                  Producto Destacado
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                  <input
                    type="checkbox"
                    id="featured"
                    name="featured"
                    class="w-5 h-5 text-black border-gray-300 rounded focus:ring-black"
                  />
                  <span class="text-sm text-gray-700">Marcar como destacado</span>
                </label>
              </div>
            </div>
          </div>

          <!-- Colors -->
          <div>
            <h2 class="text-lg font-bold text-gray-900 mb-4">Colores Disponibles</h2>
            <div id="colors-container" class="space-y-2">
              <div class="flex gap-2">
                <input
                  type="text"
                  name="color"
                  placeholder="Ej: black, white, blue"
                  class="flex-1 px-4 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                />
              </div>
            </div>
            <button
              type="button"
              id="add-color-btn"
              class="mt-2 text-sm text-black hover:underline font-medium"
            >
              + Añadir otro color
            </button>
          </div>

          <!-- Stock by Size -->
          <div>
            <h2 class="text-lg font-bold text-gray-900 mb-4">Stock por Talla</h2>
            <div id="stock-container" class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <!-- Default sizes -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">S</label>
                <input
                  type="number"
                  name="stock_S"
                  min="0"
                  value="0"
                  class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">M</label>
                <input
                  type="number"
                  name="stock_M"
                  min="0"
                  value="0"
                  class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">L</label>
                <input
                  type="number"
                  name="stock_L"
                  min="0"
                  value="0"
                  class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">XL</label>
                <input
                  type="number"
                  name="stock_XL"
                  min="0"
                  value="0"
                  class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                />
              </div>
            </div>
          </div>

          <!-- Images Upload -->
          <div>
            <h2 class="text-lg font-bold text-gray-900 mb-4">Imágenes del Producto</h2>
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
              <input
                type="file"
                id="images"
                name="images"
                accept="image/*"
                multiple
                class="hidden"
              />
              <label for="images" class="cursor-pointer">
                <svg class="mx-auto w-12 h-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
                <p class="text-sm text-gray-600 mb-1">
                  <span class="font-semibold text-black">Haz clic para subir</span> o arrastra y suelta
                </p>
                <p class="text-xs text-gray-500">PNG, JPG, WEBP hasta 10MB</p>
              </label>
            </div>
            <div id="image-preview" class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4"></div>
            <div id="upload-progress" class="mt-4 hidden">
              <div class="bg-gray-200 rounded-full h-2">
                <div id="progress-bar" class="bg-black h-2 rounded-full transition-all" style="width: 0%"></div>
              </div>
              <p id="progress-text" class="text-sm text-gray-600 mt-2 text-center">Subiendo imágenes...</p>
            </div>
          </div>

          <!-- Submit Buttons -->
          <div class="flex items-center justify-end gap-4 pt-6 border-t border-gray-200">
            <a
              href="/admin/products"
              class="px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-lg hover:border-gray-400 transition-colors font-medium"
            >
              Cancelar
            </a>
            <button
              type="submit"
              id="submit-btn"
              class="px-6 py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-medium"
            >
              Crear Producto
            </button>
          </div>
        </form>
      </div>
    </main>
  </div>

  <script>
    import { supabase } from '@lib/supabase';

    const form = document.getElementById('product-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const imagesInput = document.getElementById('images') as HTMLInputElement;
    const imagePreview = document.getElementById('image-preview') as HTMLDivElement;
    const uploadProgress = document.getElementById('upload-progress') as HTMLDivElement;
    const progressBar = document.getElementById('progress-bar') as HTMLDivElement;
    const progressText = document.getElementById('progress-text') as HTMLParagraphElement;

    let selectedFiles: File[] = [];
    let uploadedImageUrls: string[] = [];

    // Add color input
    document.getElementById('add-color-btn')?.addEventListener('click', () => {
      const container = document.getElementById('colors-container');
      const newInput = document.createElement('div');
      newInput.className = 'flex gap-2';
      newInput.innerHTML = `
        <input
          type="text"
          name="color"
          placeholder="Ej: red, green"
          class="flex-1 px-4 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
        />
        <button type="button" class="remove-color px-3 py-2 text-red-600 hover:text-red-800">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      `;
      container?.appendChild(newInput);

      newInput.querySelector('.remove-color')?.addEventListener('click', () => {
        newInput.remove();
      });
    });

    // Handle image selection
    imagesInput.addEventListener('change', (e) => {
      const files = Array.from(imagesInput.files || []);
      selectedFiles = files;
      
      // Preview images
      imagePreview.innerHTML = '';
      files.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = (e) => {
          const div = document.createElement('div');
          div.className = 'relative group';
          div.innerHTML = `
            <img src="${e.target?.result}" class="w-full h-32 object-cover rounded-lg" />
            <button type="button" class="remove-image absolute top-2 right-2 bg-red-500 text-white p-1 rounded-full opacity-0 group-hover:opacity-100 transition-opacity" data-index="${index}">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          `;
          imagePreview.appendChild(div);

          div.querySelector('.remove-image')?.addEventListener('click', (e) => {
            const btn = e.currentTarget as HTMLButtonElement;
            const idx = parseInt(btn.dataset.index || '0');
            selectedFiles.splice(idx, 1);
            div.remove();
          });
        };
        reader.readAsDataURL(file);
      });
    });

    // Upload images to Cloudinary
    async function uploadImagesToCloudinary(files: File[]): Promise<string[]> {
      const cloudName = import.meta.env.PUBLIC_CLOUDINARY_CLOUD_NAME;
      const uploadPreset = import.meta.env.PUBLIC_CLOUDINARY_PRESET || 'croma_uploads';
      const urls: string[] = [];

      uploadProgress.classList.remove('hidden');
      
      for (let i = 0; i < files.length; i++) {
        const file = files[i];
        const formData = new FormData();
        formData.append('file', file);
        formData.append('upload_preset', uploadPreset);
        formData.append('folder', 'croma/products');

        try {
          const response = await fetch(
            `https://api.cloudinary.com/v1_1/${cloudName}/image/upload`,
            {
              method: 'POST',
              body: formData,
            }
          );

          if (!response.ok) throw new Error('Upload failed');

          const data = await response.json();
          urls.push(data.secure_url);

          // Update progress
          const progress = ((i + 1) / files.length) * 100;
          progressBar.style.width = `${progress}%`;
          progressText.textContent = `Subiendo imágenes... ${i + 1}/${files.length}`;
        } catch (error) {
          console.error('Error uploading image:', error);
          throw error;
        }
      }

      uploadProgress.classList.add('hidden');
      return urls;
    }

    // Form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      submitBtn.disabled = true;
      submitBtn.textContent = 'Creando producto...';

      try {
        // Upload images first
        if (selectedFiles.length > 0) {
          uploadedImageUrls = await uploadImagesToCloudinary(selectedFiles);
        }

        // Collect form data
        const formData = new FormData(form);
        const name = formData.get('name') as string;
        const description = formData.get('description') as string;
        const price = parseFloat(formData.get('price') as string);
        const category = formData.get('category') as string;
        const brand = formData.get('brand') as string;
        const featured = formData.get('featured') === 'on';

        // Collect colors
        const colorInputs = form.querySelectorAll('input[name="color"]');
        const colors = Array.from(colorInputs)
          .map(input => (input as HTMLInputElement).value.trim())
          .filter(color => color !== '');

        // Collect stock by sizes
        const stockBySizes: Record<string, number> = {};
        const stockInputs = form.querySelectorAll('input[name^="stock_"]');
        stockInputs.forEach(input => {
          const size = (input as HTMLInputElement).name.replace('stock_', '');
          const quantity = parseInt((input as HTMLInputElement).value) || 0;
          if (quantity > 0) {
            stockBySizes[size] = quantity;
          }
        });

        // Generate slug
        const slug = name.toLowerCase()
          .normalize('NFD')
          .replace(/[\u0300-\u036f]/g, '')
          .replace(/[^a-z0-9]+/g, '-')
          .replace(/^-+|-+$/g, '');

        // Create product
        const { data, error } = await supabase
          .from('products')
          .insert({
            name,
            slug,
            description,
            price,
            category,
            brand,
            colors,
            images: uploadedImageUrls,
            stock_by_sizes: stockBySizes,
            featured,
          })
          .select()
          .single();

        if (error) throw error;

        alert('Producto creado exitosamente');
        window.location.href = '/admin/products';
      } catch (error: any) {
        console.error('Error creating product:', error);
        alert('Error al crear el producto: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = 'Crear Producto';
      }
    });
  </script>
</BaseLayout>
