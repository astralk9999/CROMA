---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductCard from '@components/product/ProductCard.astro';
import Sidebar from '@components/Sidebar.astro';
import { supabase } from '@lib/supabase';

const { slug } = Astro.params;
const normalizedSlug = slug || 'COLOR';
const name = normalizedSlug.replace(/-/g, ' ').toUpperCase();

// Query Supabase for products containing this color
const { data: products } = await supabase
  .from('products')
  .select('*')
  .contains('colors', [slug])
  .order('created_at', { ascending: false });

const filteredProducts = products || []; 
---

<PublicLayout title={name}>
  <section class="container-custom py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      {/* Sidebar */}
      <Sidebar />

      {/* Main Content */}
      <div class="flex-1">
        
        {/* Header */}
        <div class="mb-8 pb-4 border-b border-gray-200">
           <h1 class="text-4xl font-urban font-bold text-gray-900 mb-2 uppercase">Color: {name}</h1>
           <p class="text-gray-600">Items available in {name.toLowerCase()}.</p>
        </div>

        {/* Products Grid */}
        {filteredProducts && filteredProducts.length > 0 ? (
          <div class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-x-4 gap-y-10">
            {filteredProducts.map((product) => (
              <ProductCard product={product} />
            ))}
          </div>
        ) : (
          <div class="text-center py-20">
            <p class="text-xl text-gray-500">No products found for this color.</p>
          </div>
        )}
      </div>
    </div>
  </section>
</PublicLayout>
