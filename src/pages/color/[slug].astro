---
import PublicLayout from '@layouts/PublicLayout.astro';
import Sidebar from '@components/Sidebar.astro';
import ProductGrid from '@components/islands/ProductGrid';
import { supabase } from '@lib/supabase';

const { slug } = Astro.params;
const normalizedSlug = slug || 'COLOR';
const name = normalizedSlug.replace(/-/g, ' ').toUpperCase();

// Fetch all products that have colors
// We filter in memory because we need to normalize the individual color strings in the array to match the slug
const { data: allProducts } = await supabase
  .from('products')
  .select('*')
  .not('colors', 'is', null)
  .order('created_at', { ascending: false });

const filteredProducts = (allProducts || []).filter(product => {
    if (!product.colors || !Array.isArray(product.colors)) return false;
    
    return product.colors.some((color: string) => {
        // Normalize the color name to a slug (same logic as Sidebar)
        const colorSlug = color.trim().toLowerCase().replace(/ /g, '-').replace(/[^\w-]+/g, '');
        return colorSlug === slug;
    });
});
---

<PublicLayout title={name}>
  <section class="container-custom py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      {/* Sidebar */}
      <Sidebar />

      {/* Main Content */}
      <div class="flex-1">
        
        {/* Header */}
        <div class="mb-8 pb-4 border-b border-gray-200">
           <h1 class="text-4xl font-urban font-bold text-gray-900 mb-2 uppercase">Color: {name}</h1>
           <p class="text-gray-600">Items available in {name.toLowerCase()}.</p>
        </div>

        {/* Products Grid - React Island with Skeleton */}
        <div class="min-h-[50vh]">
          {filteredProducts && filteredProducts.length > 0 ? (
            <ProductGrid client:load products={filteredProducts} />
          ) : (
            <div class="text-center py-20">
              <p class="text-xl text-gray-500">No products found for this color.</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</PublicLayout>
