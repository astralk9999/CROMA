---
import PublicLayout from '@layouts/PublicLayout.astro';
import { supabase } from '@lib/supabase';
import { formatPrice } from '@lib/utils';
import CartSummary from '@components/checkout/CartSummary';

const user = Astro.locals.user;
const profile = Astro.locals.profile;

// Auth check removed to allow Guest Checkout
// const user = Astro.locals.user; // Already declared above
// const profile = Astro.locals.profile; // Already declared above

---

<PublicLayout title="Checkout">
  <section class="container-custom py-12">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-8">Finalizar Compra</h1>

      {!user && (
        <div class="mb-8 p-4 bg-blue-50 border-l-4 border-blue-500 rounded flex justify-between items-center">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-blue-700 text-sm">¿Ya tienes cuenta? <a href="/auth/login?redirect=/checkout" class="font-bold underline">Inicia sesión</a> para guardar tu pedido en tu historial.</p>
          </div>
        </div>
      )}

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Checkout Form -->
        <div class="lg:col-span-2">
          <form id="checkout-form" class="space-y-6">
            <!-- Shipping Address -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                Dirección de Envío
              </h2>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="md:col-span-2">
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nombre Completo *</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    value={profile?.full_name || ''}
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="Tu nombre completo"
                  />
                </div>

                <div class="md:col-span-2">
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    value={user?.email || ''}
                    class={`w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black ${user ? 'bg-gray-50' : ''}`}
                    readonly={!!user}
                    placeholder="tu@email.com"
                  />
                </div>

                <div class="md:col-span-2">
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Teléfono *</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    required
                    value={profile?.phone || ''}
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="Tu teléfono"
                  />
                </div>

                <div class="md:col-span-2">
                  <label for="address" class="block text-sm font-medium text-gray-700 mb-1">Dirección *</label>
                  <input 
                    type="text" 
                    id="address" 
                    name="address" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="Calle, número, piso..."
                  />
                </div>

                <div>
                  <label for="city" class="block text-sm font-medium text-gray-700 mb-1">Ciudad *</label>
                  <input 
                    type="text" 
                    id="city" 
                    name="city" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="Tu ciudad"
                  />
                </div>

                <div>
                  <label for="postal_code" class="block text-sm font-medium text-gray-700 mb-1">Código Postal *</label>
                  <input 
                    type="text" 
                    id="postal_code" 
                    name="postal_code" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                    placeholder="12345"
                  />
                </div>

                <div class="md:col-span-2">
                  <label for="country" class="block text-sm font-medium text-gray-700 mb-1">País *</label>
                  <select 
                    id="country" 
                    name="country" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                  >
                    <option value="ES" selected>España</option>
                    <option value="PT">Portugal</option>
                    <option value="FR">Francia</option>
                    <option value="IT">Italia</option>
                    <option value="DE">Alemania</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- Payment Info -->
            <div class="bg-gray-100 rounded-xl p-6 border border-gray-200">
              <div class="flex items-center gap-3">
                <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <div>
                  <p class="font-bold text-gray-900">Pago seguro con Stripe</p>
                  <p class="text-sm text-gray-600">Serás redirigido a Stripe para completar el pago de forma segura.</p>
                </div>
              </div>
            </div>

            <!-- Submit Button -->
            <button 
              type="submit" 
              id="submit-btn"
              class="w-full py-4 bg-black text-white font-bold rounded-lg hover:bg-gray-800 transition-colors text-lg"
            >
              Proceder al Pago
            </button>
          </form>
        </div>

        <!-- Order Summary -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-4">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Resumen del Pedido</h2>
            
            <CartSummary client:only="react" />

            <!-- Premium Coupon Input -->
            <div id="coupon-section" class="mt-6 pt-6 border-t-2 border-black/5">
              <div id="coupon-input-container">
                <label for="coupon_code" class="block text-[10px] font-black uppercase tracking-[0.2em] text-gray-400 mb-3 ml-1">¿Tienes un código?</label>
                <div class="relative group">
                  <input 
                    type="text" 
                    id="coupon_code" 
                    name="coupon_code"
                    class="w-full pl-5 pr-24 py-4 bg-gray-50 border-2 border-transparent rounded-xl focus:bg-white focus:border-black transition-all duration-300 font-bold placeholder:text-gray-300 uppercase tracking-widest"
                    placeholder="INTRODUCE AQUÍ"
                  />
                  <button 
                    type="button"
                    id="apply-coupon-btn"
                    class="absolute right-2 top-2 bottom-2 px-6 bg-black text-white text-xs font-black uppercase tracking-widest rounded-lg hover:bg-gray-800 transition-all active:scale-95 disabled:opacity-50"
                  >
                    APLICAR
                  </button>
                </div>
              </div>

              <!-- Applied Coupon View (Hidden by default) -->
              <div id="coupon-applied-container" class="hidden">
                 <div class="flex items-center justify-between p-4 bg-green-50 border-2 border-green-100 rounded-xl animate-in zoom-in-95 duration-300">
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                        </div>
                        <div>
                            <p id="applied-code-text" class="text-xs font-black text-green-800 uppercase tracking-wider"></p>
                            <p class="text-[10px] font-bold text-green-600 uppercase">Cupón aplicado con éxito</p>
                        </div>
                    </div>
                    <button type="button" id="remove-coupon-btn" class="p-2 hover:bg-green-100 rounded-lg text-green-700 transition-colors">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                    </button>
                 </div>
              </div>

              <p id="coupon-error" class="mt-3 text-[10px] font-black text-red-500 uppercase tracking-widest text-center hidden"></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    import { cartItems, cartTotal } from '@stores/cart';
    import { appliedCoupon } from '@stores/coupon';
    
    const form = document.getElementById('checkout-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement | null;
    
    // Coupon Elements
    const couponInput = document.getElementById('coupon_code') as HTMLInputElement | null;
    const applyBtn = document.getElementById('apply-coupon-btn') as HTMLButtonElement | null;
    const removeBtn = document.getElementById('remove-coupon-btn') as HTMLButtonElement | null;
    const inputContainer = document.getElementById('coupon-input-container');
    const appliedContainer = document.getElementById('coupon-applied-container');
    const appliedCodeText = document.getElementById('applied-code-text');
    const errorEl = document.getElementById('coupon-error');

    // Sync UI with Store
    appliedCoupon.subscribe(coupon => {
        if (!inputContainer || !appliedContainer || !appliedCodeText || !errorEl) return;

        if (coupon && coupon.valid) {
            inputContainer.classList.add('hidden');
            appliedContainer.classList.remove('hidden');
            appliedCodeText.textContent = coupon.code;
            errorEl.classList.add('hidden');
        } else {
            inputContainer.classList.remove('hidden');
            appliedContainer.classList.add('hidden');
        }
    });

    // Handle Coupon Logic
    applyBtn?.addEventListener('click', async () => {
        const code = couponInput?.value.trim().toUpperCase();
        if (!code || !errorEl || !applyBtn) return;

        applyBtn.disabled = true;
        applyBtn.textContent = '...';
        errorEl.classList.add('hidden');

        try {
            const response = await fetch('/api/validate-coupon', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ code, amount: cartTotal.get() })
            });
            const result = await response.json();

            if (result.valid) {
                appliedCoupon.set(result);
                if (couponInput) couponInput.value = '';
            } else {
                errorEl.textContent = result.message || 'Cupón no válido';
                errorEl.classList.remove('hidden');
            }
        } catch (err) {
            errorEl.textContent = 'Error de conexión';
            errorEl.classList.remove('hidden');
        } finally {
            applyBtn.disabled = false;
            applyBtn.textContent = 'APLICAR';
        }
    });

    removeBtn?.addEventListener('click', () => {
        appliedCoupon.set(null);
    });
    
    // Enable button initially (validation will happen on submit)
    if (submitBtn) submitBtn.disabled = false;

    // Handle form submission
    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.textContent = 'Procesando...';
            }

            const formData = new FormData(form);
            const shippingAddress = {
                name: formData.get('name'),
                email: formData.get('email'),
                phone: formData.get('phone'),
                address: formData.get('address'),
                city: formData.get('city'),
                postal_code: formData.get('postal_code'),
                country: formData.get('country'),
            };

            const currentItems = Object.values(cartItems.get());

            if (currentItems.length === 0) {
                 alert('Tu carrito está vacío');
                 if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Proceder al Pago';
                 }
                 return;
            }

            try {
                const response = await fetch('/api/checkout', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    items: currentItems,
                    shippingAddress,
                    origin: window.location.origin,
                    guestEmail: formData.get('email'),
                    couponCode: appliedCoupon.get()?.code || undefined,
                }),
                });

                const data = await response.json();
                
                if (data.url) {
                    window.location.href = data.url;
                } else {
                    alert('Error: ' + (data.error || 'Error desconocido'));
                    if (submitBtn) {
                        submitBtn.disabled = false;
                        submitBtn.textContent = 'Proceder al Pago';
                    }
                }
            } catch (error) {
                console.error('Checkout error:', error);
                alert('Error de conexión');
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Proceder al Pago';
                }
            }
        });
    }
  </script>
</PublicLayout>
