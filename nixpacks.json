{
    "providers": [
        "node"
    ],
    "variables": {
        "NIXPACKS_NODE_VERSION": "22"
    },
    "phases": {
        "setup": {
            "nixPkgs": [
                "nodejs_22",
                "npm"
            ],
            "aptPkgs": [
                "wget",
                "curl"
            ]
        },
        "install": {
            "cmds": [
                "npm ci"
            ]
        },
        "build": {
            "cmds": [
                "npm run build"
            ]
        }
    },
    "start": {
        "cmd": "npm run start"
    }
}