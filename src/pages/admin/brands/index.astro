---
import AdminLayout from '@layouts/AdminLayout.astro';
import ConfirmationModal from '@components/islands/ConfirmationModal';
import { supabaseAdmin } from '../../../lib/supabase-admin';

// Fetch brands
const { data: brands, error } = await supabaseAdmin
  .from('brands')
  .select('*')
  .order('name');
---

<AdminLayout title="Registro de Marcas" activeSection="brands">
  <!-- Industrial Actions Bar (Sticky) -->
  <div class="mb-12 sticky top-0 z-[100] px-0 pt-4 pb-12 bg-zinc-50/80 backdrop-blur-xl transition-all duration-300">
    <div class="bg-zinc-800 rounded-2xl p-1 shadow-[0_20px_50px_rgba(0,0,0,0.5)] relative border border-white/5">
        <!-- Accent Glow (Moved to clipped container) -->
        <div class="absolute inset-0 rounded-2xl overflow-hidden pointer-events-none">
            <div class="absolute -top-24 -right-24 w-96 h-96 bg-white/5 blur-[120px] rounded-full"></div>
        </div>
        
        <div class="relative z-10 flex flex-col xl:flex-row flex-wrap gap-4 items-center p-2 px-4 lg:px-6">
            <!-- Search Group -->
            <div class="relative flex-1 group/search w-full">
                <!-- Audit Status Gauge -->
                <div class="absolute -top-3 left-8 px-3 py-1 bg-zinc-700 border border-white/10 rounded-sm z-20 opacity-0 group-focus-within/search:opacity-100 transition-all duration-500 translate-y-2 group-focus-within/search:translate-y-0 flex items-center gap-3 shadow-[0_10px_30px_rgba(0,0,0,0.8)]">
                    <div class="flex gap-0.5">
                        <div class="w-1 h-1 bg-white rounded-full animate-pulse"></div>
                        <div class="w-1 h-1 bg-white/40 rounded-full animate-pulse [animation-delay:200ms]"></div>
                        <div class="w-1 h-1 bg-white/10 rounded-full animate-pulse [animation-delay:400ms]"></div>
                    </div>
                    <span class="text-[7px] font-black text-white/90 uppercase tracking-[0.4em]">Audit_Protocol.Active</span>
                </div>

                <input
                    type="text"
                    id="search-input"
                    placeholder="IDENTIFICAR MANUFACTURADO O CORPORACIÓN..."
                    class="w-full bg-white/5 border-2 border-white/10 rounded-xl px-14 py-6 text-white text-[10px] font-black uppercase tracking-[0.2em] focus:outline-none focus:border-white focus:bg-zinc-700/50 focus:ring-8 focus:ring-white/[0.03] focus:shadow-[0_0_50px_rgba(255,255,255,0.08)] focus:tracking-[0.3em] transition-all duration-500 placeholder:text-white/10 placeholder:font-bold selection:bg-white selection:text-black"
                />
                <svg class="absolute left-6 top-1/2 -translate-y-1/2 w-5 h-5 text-white/20 group-focus-within/search:text-white group-focus-within/search:scale-110 group-hover:text-white/40 transition-all duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
            </div>

            <!-- Vertical Divider -->
            <div class="hidden xl:block w-px h-10 bg-white/10"></div>

            <a 
                href="/admin/brands/new" 
                class="h-14 bg-white text-black px-8 rounded-xl text-[9px] font-black uppercase tracking-[0.2em] hover:bg-zinc-100 active:scale-95 transition-all flex items-center gap-3 whitespace-nowrap shadow-xl"
            >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4"/></svg>
                <span>NUEVO REGISTRO</span>
            </a>
        </div>
    </div>
  </div>

  <!-- Info Bar: Executive Insight -->
  <div class="mb-8 flex items-center gap-4 px-2">
    <div class="h-px flex-1 bg-black/[0.03]"></div>
    <div class="flex items-center gap-3 px-6 py-2 bg-white border border-black/5 rounded-full shadow-sm">
        <div class="w-1.5 h-1.5 bg-zinc-700 rounded-full animate-pulse"></div>
        <p class="text-[10px] font-black text-zinc-400 uppercase tracking-[0.3em]" id="count-info">
            {brands?.length || 0} corporaciones activas
        </p>
    </div>
    <div class="h-px flex-1 bg-black/[0.03]"></div>
  </div>

  <!-- Brands List: High Density Table -->
  <div class="bg-white rounded-2xl border border-zinc-200/60 shadow-xl overflow-hidden mb-20">
    <div class="overflow-x-auto">
      <table class="w-full text-left border-collapse" id="brands-table">
        <thead class="bg-zinc-50 border-b-2 border-zinc-100">
          <tr>
            <th class="px-10 py-6 text-[11px] font-black text-black uppercase tracking-[0.2em]">Identidad</th>
            <th class="px-10 py-6 text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em]">Slug ID</th>
            <th class="px-10 py-6 text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em]">Dominio Web</th>
            <th class="px-10 py-6 text-[10px] font-black text-zinc-400 uppercase tracking-[0.2em] text-right">Comandos</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-black/[0.03]" id="brands-body">
          {brands?.map((brand) => (
            <tr 
              class="group hover:bg-zinc-50/50 transition-all duration-500 border-l-[3px] border-transparent hover:border-zinc-200 brand-row" 
              data-name={brand.name.toLowerCase()} 
              data-slug={brand.slug.toLowerCase()}
              data-website={(brand.website || '').toLowerCase()}
            >
              <td class="px-10 py-8">
                <div class="flex items-center gap-6">
                    <div class="relative">
                        {brand.logo ? (
                            <img src={brand.logo} class="w-14 h-14 object-contain rounded-lg bg-zinc-50 border border-black/[0.03] group-hover:scale-110 transition-transform duration-500 shadow-sm" alt={brand.name} />
                        ) : (
                            <div class="w-14 h-14 bg-zinc-800 rounded-lg flex items-center justify-center text-white font-black text-xl shadow-inner group-hover:scale-110 transition-transform duration-500">
                                {brand.name.charAt(0).toUpperCase()}
                            </div>
                        )}
                        <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-green-500 border-2 border-white rounded-full"></div>
                    </div>
                    <div>
                        <p class="text-sm font-black text-black uppercase tracking-tight mb-1">{brand.name}</p>
                        <p class="text-[9px] font-bold text-zinc-400 uppercase tracking-widest leading-none">Verificado</p>
                    </div>
                </div>
              </td>
              <td class="px-10 py-8">
                <span class="px-3 py-1 bg-zinc-100 text-zinc-500 font-mono text-[9px] font-bold uppercase rounded border border-black/[0.03] tracking-tighter">
                    {brand.slug}
                </span>
              </td>
              <td class="px-10 py-8 text-gray-500">
                {brand.website ? (
                  <a href={brand.website} target="_blank" class="text-[10px] font-black text-zinc-400 hover:text-black uppercase tracking-widest flex items-center gap-2 group/link">
                    {new URL(brand.website).hostname}
                    <svg class="w-3 h-3 group-hover/link:translate-x-0.5 group-hover/link:-translate-y-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                  </a>
                ) : <span class="text-[9px] font-black text-zinc-200 uppercase tracking-widest italic">Offline</span>}
              </td>
              <td class="px-10 py-8 text-right">
                <div class="flex items-center justify-end gap-3 opacity-0 group-hover:opacity-100 transition-opacity">
                    <a href={`/admin/brands/${brand.id}/edit`} class="p-3 bg-white border border-black/5 text-zinc-400 hover:text-black hover:shadow-md rounded-xl transition-all">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                    </a>
                    <button 
                        data-id={brand.id} 
                        data-name={brand.name}
                        class="delete-btn p-3 bg-white border border-black/5 text-zinc-300 hover:text-red-600 hover:border-red-100 hover:shadow-md rounded-xl transition-all"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                    </button>
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>

  <script>
    import { supabase } from '../../../lib/supabase';

    function initPage() {
        // Real-time search filter
        const searchInput = document.getElementById('search-input') as HTMLInputElement;
        const rows = document.querySelectorAll('.brand-row');
        const countInfo = document.getElementById('count-info');
        const totalCount = rows.length;

        searchInput?.addEventListener('input', () => {
          const query = searchInput.value.toLowerCase().trim();
          let visibleCount = 0;

          rows.forEach(row => {
            const name = row.getAttribute('data-name') || '';
            const slug = row.getAttribute('data-slug') || '';
            const website = row.getAttribute('data-website') || '';
            const matches = name.includes(query) || slug.includes(query) || website.includes(query);
            
            (row as HTMLElement).style.display = matches ? '' : 'none';
            if (matches) visibleCount++;
          });

          if (countInfo) {
            countInfo.textContent = query 
              ? `${visibleCount} DE ${totalCount} RESULTADOS` 
              : `${totalCount} CORPORACIONES ACTIVAS`;
          }
        });

        // Delete functionality
        document.querySelectorAll('.delete-btn').forEach(btn => {
          btn.addEventListener('click', async () => {
            const id = btn.getAttribute('data-id');
            const name = btn.getAttribute('data-name');

            if (!id) return;

            const confirmed = await customConfirm(
                'ELIMINAR REGISTRO',
                `¿ESTÁS SEGURO DE QUE QUIERES ELIMINAR LA MARCA "${name?.toUpperCase()}"? ESTA ACCIÓN ES IRREVERSIBLE.`,
                'danger'
            );

            if (confirmed) {
              const { error } = await supabase.rpc('admin_delete_brand', { p_id: id });
              
              if (error) {
                (window as any).showIndustrialAlert('ERROR EN SISTEMA: ' + error.message, 'error');
              } else {
                (window as any).showIndustrialAlert('REGISTRO DE MARCA ELIMINADO', 'success');
                setTimeout(() => window.location.reload(), 500);
              }
            }
          });
        });

        // Helper for custom confirmation
        function customConfirm(title: string, message: string, variant: 'danger' | 'warning' | 'info' = 'info'): Promise<boolean> {
            return new Promise((resolve) => {
                const event = new CustomEvent('open-confirm-modal', {
                    detail: {
                        title,
                        message,
                        variant,
                        confirmText: 'CONFIRMAR',
                        cancelText: 'CANCELAR',
                        onConfirm: () => resolve(true),
                        onCancel: () => resolve(false)
                    }
                });
                window.dispatchEvent(event);
            });
        }
    }

    // Run on every View Transitions navigation
    document.addEventListener('astro:page-load', initPage);
  </script>

  {/* Global Confirmation Modal Island */}
  <ConfirmationModal client:load />
</AdminLayout>
